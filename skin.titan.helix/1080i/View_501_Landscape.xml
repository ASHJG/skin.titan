<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
    <!--Default-->
    <include name="View_501_Landscape">
		<control type="group">
			<defaultcontrol always="true">501</defaultcontrol>
		    <visible>Control.IsVisible(501)</visible>
			<include>animation_view_change</include>

			<control type="panel" id="501">
				<posx>50</posx>
				<width>1810</width>
				<height>900</height>
				<posy>230</posy>
				<onup>9000</onup>
				<ondown>60</ondown>
				<onleft>501</onleft>
				<onright>501</onright>
				<pagecontrol>60</pagecontrol>
				<viewtype label="31430">thumbnail</viewtype>
				<orientation>horizontal</orientation>
				<focusposition>-</focusposition>
				<preloaditems>4</preloaditems>
				<scrolltime tween="cubic" easing="inout">500</scrolltime>
				<visible>!Skin.HasSetting(ForcedViews.Enabled) | 
				[Container.Content(movies) + Skin.String(ForcedViews.movies,501)] | 
				[Container.Content(tvshows) + Skin.String(ForcedViews.tvshows,501)] | 
				[Container.Content(seasons) + Skin.String(ForcedViews.seasons,501)] | 
				[Container.Content(episodes) + Skin.String(ForcedViews.episodes,501)] | 
				[!Container.Content(movies) + !Container.Content(tvshows) + !Container.Content(seasons) + !Container.Content(episodes)]
				</visible>
				<itemlayout width="620" height="350">
					<control type="image">
						<!--Panel Shadow-->
						<include>BannerViewImageSizeNormalShadow</include>
						<texture>home/home_shadow.png</texture>
					</control>
					<include>BannerViewImagesNormal</include>
				</itemlayout>
				<focusedlayout width="620" height="350">
					<control type="group">
						<include>BannerViewOverlayFocusNormal</include>
					</control>
					
				</focusedlayout>
			</control>

			<!--horizontal Scrollbar-->
			<control type="group">
				<control type="scrollbar" id="60">
					<visible>Control.IsVisible(501)</visible>
					<left>60</left>
					<posy>945</posy>
					<width>1800</width>
					<height>25</height>
					<onup>501</onup>
					<onleft>60</onleft>
					<onright>60</onright>
					<texturesliderbackground border="6" colordiffuse="grey">scrollbar/texturesliderbackground.png</texturesliderbackground>
					<texturesliderbar colordiffuse="$INFO[Skin.String(ButtonColor)]" border="5">scrollbar/texturesliderbar.png</texturesliderbar>
					<texturesliderbarfocus colordiffuse="$INFO[Skin.String(ButtonFocusColor)]" border="2">scrollbar/texturesliderbar_focus.png</texturesliderbarfocus>
					<textureslidernib>-</textureslidernib>
					<textureslidernibfocus>-</textureslidernibfocus>
					<showonepage>false</showonepage>
					<orientation>horizontal</orientation>
					<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)">Conditional</animation>
					<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)]">Conditional</animation>
				</control>
			</control>
			
		</control>
	
	</include>
</includes>