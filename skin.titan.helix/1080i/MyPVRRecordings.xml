<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol>15</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	
	<onunload>ClearProperty(ShowViewSubMenu, Home)</onunload>
	<views>15,51,501,502,505,506,509,510,511,512,515</views>
    <controls>
        <!--Global Background-->
        <include>GlobalBackground</include>
		
		 <!--Header-->
        <include condition="!Skin.HasSetting(DisableHeader)">Header</include>
		<!--NowPlaying-->
        <include condition="Skin.HasTheme(classic)">NowPlayingMusicClassic</include>
        <include condition="Skin.HasTheme(classic)">NowPlayingVideoClassic</include>
		<include condition="!Skin.HasTheme(classic)">NowPlayingModern</include>
		<!--Time & Weather-->
        <include condition="!Skin.HasSetting(DisableHeader)">TimeInfo</include>
        
       
		<!--Footer-->
		<include condition="!skin.hassetting(nofooterbar)">Footer</include>
		
        <!--PVR Views-->
		<control type="group" id="5000">
		<include>animation_window_open_close</include>
		<include>View_51_BigList</include>
		<include>ViewExtendedList</include>
		<include>View_501_Landscape</include>
		<include>View_502_LandscapeSingle</include>
		<include>View_505_LandscapeDetails</include>
		<include>View_509_PanelSquare</include>
		<include>View_510_PanelSquareDetails</include>
		<include>View_511_Thumbs</include>
		<include>View_512_ThumbsDetails</include>
		<include>View_515_LowList</include>
		
		
			 <!--LiveTVRecordingsView ID=13-->
			<control type="group" id="5000">
				<visible>Control.IsVisible(15)</visible>
				<include>PVRpanelBackground</include>
			
				<control type="group">
					<!--Video Window-->
					<visible>Control.IsVisible(15)</visible>
					<visible>!IsEmpty(ListItem.StartDate)</visible>
					<include>animation_view_change_pvr</include>
					
					<posx>115</posx>
					<posy>330</posy>
					<control type="image">
						<width>300</width>
						<height>188</height>
						<texture>$INFO[ListItem.Thumb]</texture>
						<visible>!IsEmpty(ListItem.Thumb)</visible>
					</control>
				</control>
				<control type="group">
					<!--Start, End, Next-->
					<visible>Control.IsVisible(15)</visible>
					<visible>!IsEmpty(ListItem.StartDate)</visible>
					<include>animation_view_change_pvr</include>
					
					<animation effect="slide" end="-331,0" time="0" condition="IsEmpty(ListItem.Thumb)">Conditional</animation>
					<posx>450</posx>
					<posy>330</posy>
					<control type="group">
						<!-- Ground 1 -->
						<posy>0</posy>
						<visible>!IsEmpty(Container(15).ListItem.Title)</visible>
						<control type="label">
							<posx>0</posx>
							<posy>0</posy>
							<width>180</width>
							<textcolor>$INFO[Skin.String(ViewDetailsFocusColor)]</textcolor>
							<label>$LOCALIZE[551] :</label>
						</control>
						<control type="fadelabel">
							<posx>130</posx>
							<posy>0</posy>
							<width>300</width>
							<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
							<label>$INFO[Container(15).ListItem.Title]</label>
						</control>
					</control>
					<control type="group">
						<!-- Ground 2 -->
						<posy>50</posy>
						<visible>!IsEmpty(Container(15).ListItem.ChannelName)</visible>
						<control type="label">
							<posx>0</posx>
							<posy>0</posy>
							<width>180</width>
							<textcolor>$INFO[Skin.String(ViewDetailsFocusColor)]</textcolor>
							<label>$LOCALIZE[19029] :</label>
						</control>
						<control type="label">
							<posx>130</posx>
							<posy>0</posy>
							<width>300</width>
							<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
							<label>$INFO[Container(15).ListItem.ChannelName]</label>
						</control>
					</control>
				</control>
				<control type="group">
					<!--Infos-->
					<visible>Control.IsVisible(15)</visible>
					<include>animation_view_change_pvr</include>
					
					<control type="textbox">
						<shadowcolor></shadowcolor>
						<!--Info Plot-->
						<posx>120</posx>
						<posy>560</posy>
						<width>830</width>
						<height>240</height>
						<font>Light32</font>
						<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
						
						<label>$INFO[ListItem.Plot]</label>
					</control>
					<control type="label">
						<!--Next Start Dat -->
						<posx>120</posx>
						<posy>810</posy>
						<width>800</width>
						<font>Reg30</font>
						<textcolor>cc$INFO[Skin.String(ViewDetailsFocusColor)]</textcolor>
						<label>$INFO[Container(15).ListItem.StartDate]</label>
						<scroll>false</scroll>
					</control>
					<control type="label">
						<!--Next Title-->
						<posx>120</posx>
						<posy>845</posy>
						<width>800</width>
						<font>Light28</font>
						<textcolor>$INFO[Skin.String(ViewDetailsFocusColor)]</textcolor>
						<label>$INFO[ListItem.StartTime]$INFO[ListItem.Duration, / ,]</label>
						<scroll>false</scroll>
					</control>
				</control>
				<control type="list" id="15">
					<!--List ID=13-->
					<include>animation_view_change_pvr</include>
					
					<posx>1010</posx>
					<posy>340</posy>
					<width>1920</width>
					<height>570</height>
					<onleft>9000</onleft>
					<onright>70</onright>
					<onup>11</onup>
					<ondown>11</ondown>
					<viewtype label="535">list</viewtype>
					<pagecontrol>70</pagecontrol>
					<scrolltime>200</scrolltime>
					<!-- =========== -->
					<!-- x=980 w=765 -->
					<!-- =========== -->
					<itemlayout height="60" width="840">
						<control type="label">
							<!--Recording Name-->
							<posx>15</posx>
							<width>715</width>
							<height>55</height>
							<font>Reg28</font>
							<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
							<selectedcolor>$INFO[Skin.String(ViewDetailsTextColor)]</selectedcolor>
							<align>left</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="image">
                        <!--Watched Overlay-->
							<right>0</right>
							<posy>0</posy>
							<width>60</width>
							<height>60</height>
							<texture>$INFO[ListItem.Overlay,overlays/list/,]</texture>
						</control>
					</itemlayout>
					<focusedlayout height="90" width="840">
						<control type="group">
							<visible>!IsEmpty(ListItem.StartDate)</visible>
							<control type="image">
								<posy>0</posy>	
								<posx>0</posx>
								<width>840</width>
								<height>90</height>
								<texture border="5">diffuse/box.png</texture>
								<colordiffuse>$VAR[panel_color]</colordiffuse>
							</control>
							<control type="label">
								<!--Start: Date, Time, Duration-->
								<posx>15</posx>
								<posy>50</posy>
								<width>715</width>
								<height>33</height>
								<font>Light28</font>
								<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
								<selectedcolor>$INFO[Skin.String(ViewDetailsTextColor)]</selectedcolor>
								<align>left</align>
								<label>$INFO[ListItem.StartDate] - $INFO[ListItem.StartTime]$INFO[ListItem.Duration, / ,]</label>
							</control>
							<control type="label">
								<!--Recording Name-->
								<posx>15</posx>
								<width>715</width>
								<height>55</height>
								<font>Reg36</font>
								<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
								<selectedcolor>$INFO[Skin.String(ViewDetailsTextColor)]</selectedcolor>
								<align>left</align>
								<aligny>center</aligny>
								<label>$INFO[ListItem.Label]</label>
								<scroll>true</scroll>
							</control>
							<control type="image">
							<!--Watched Overlay-->
								<right>0</right>
								<posy>0</posy>
								<width>60</width>
								<height>60</height>
								<texture>$INFO[ListItem.Overlay,overlays/list/,]</texture>
							</control>

						</control>
					</focusedlayout>
				</control>
				<control type="scrollbar" id="70">
                    <!--Scrollbar ID70-->
                    <posx>1815</posx>
                    <posy>330</posy>
                    <height>580</height>
                    <onleft>15</onleft>
                    <onright>15</onright>
                    <animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(70) | Skin.HasSetting(EnableTouchSupport) | Skin.HasSetting(alwaysShowScrollbars)">Conditional</animation>
					<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(70) | Skin.HasSetting(EnableTouchSupport) | Skin.HasSetting(alwaysShowScrollbars)]">Conditional</animation>
                </control>

			</control>
		</control>

			<!--Sub Menu-->
        <include>SubMenuTabLeft</include>
		<include>SubMenuTabTop</include>
		<include>PVRsideblade</include>
    </controls>
</window>
		