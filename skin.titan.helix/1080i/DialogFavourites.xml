<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window type="dialog" id="134">
    <defaultcontrol always="true">450</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
	
    <controls>
		 <!-- Video Background -->
        <include>GlobalBackground</include>
		<!--Header-->
        <include>Header</include>

		<!--NowPlaying-->
		<include condition="!Skin.HasTheme(classic) + !System.Platform.Linux.RaspberryPi">NowPlayingModern</include>
        
        
		<!--Time & Weather-->
        <include>TimeInfo</include>
		
		<!-- footer bar -->
		<control type="group">
			<visible>!Control.IsVisible(514)</visible>
			<include condition="!skin.hassetting(nofooterbar)">Footer</include>
		</control>
		
		<include condition="!Skin.HasSetting(favorites.usethumbs)">FavouritesTextBased</include>
		<include condition="Skin.HasSetting(favorites.usethumbs)">FavouritesThumbsBased</include>
		
	
	</controls>
</window>