<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
    <!--Default-->
    <include name="View_500_Showcase">

        <control type="group">
            <!-- Warplist ID="500"-->
            <visible>Control.IsVisible(500)</visible>
			<include>animation_view_change</include>
            <visible>IntegerGreaterThan(Container(500).NumItems,0)</visible>
            
			<!-- movie details -->
			<control type="group">
				<visible>Skin.HasSetting(ShowCaseViewShowInfo)</visible>
				<include>MovieDetails</include>
			</control>
			
			<!--Showcase-->
            <control type="wraplist" id="500">
                <!--Wraplist ID 500-->
                <posx>-52</posx>
                <width>1960</width>
                <height>800</height>
                <onleft>500</onleft>
                <onright>500</onright>
                <onup>9000</onup>
                <ondown>60</ondown>
                <viewtype label="31429">posterwrap</viewtype>
                <pagecontrol>60</pagecontrol>
                <orientation>horizontal</orientation>
				<visible>container.content(movies) | container.content(musicvideos) | container.content(tvshows) | container.content(sets)</visible>
				<visible>!Skin.HasSetting(ForcedViews.Enabled) | 
				[Container.Content(movies) + Skin.String(ForcedViews.movies,500)] | 
				[Container.Content(tvshows) + Skin.String(ForcedViews.tvshows,500)] | 
				[Container.Content(seasons) + Skin.String(ForcedViews.seasons,500)] | 
				[Container.Content(episodes) + Skin.String(ForcedViews.episodes,500)] | 
				[!Container.Content(movies) + !Container.Content(tvshows) + !Container.Content(seasons) + !Container.Content(episodes)]
				</visible>
                <scrolltime tween="cubic" easing="inout">450</scrolltime>
                <focusposition>3</focusposition>
                <itemlayout width="270" height="800">
                </itemlayout>
                <focusedlayout width="270" height="800">
				
                </focusedlayout>
            </control>
            <include>ShowcaseMovies</include>
            
			<!--horizontal Scrollbar-->
			<control type="group">
				<control type="scrollbar" id="60">
					<visible>Control.IsVisible(500)</visible>
					<left>60</left>
					<posy>945</posy>
					<width>1800</width>
					<height>25</height>
					<onup>500</onup>
					<onleft>60</onleft>
					<onright>60</onright>
					<texturesliderbackground border="6" colordiffuse="grey">scrollbar/texturesliderbackground.png</texturesliderbackground>
					<texturesliderbar colordiffuse="$INFO[Skin.String(ButtonColor)]" border="5">scrollbar/texturesliderbar.png</texturesliderbar>
					<texturesliderbarfocus colordiffuse="$INFO[Skin.String(ButtonFocusColor)]" border="2">scrollbar/texturesliderbar_focus.png</texturesliderbarfocus>
					<textureslidernib>-</textureslidernib>
					<textureslidernibfocus>-</textureslidernibfocus>
					<showonepage>false</showonepage>
					<orientation>horizontal</orientation>
					<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)">Conditional</animation>
					<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)]">Conditional</animation>
				</control>
			</control>
		
        
		
		</control>

    
		
	
	</include>
</includes>