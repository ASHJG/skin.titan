<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol always="true">1</defaultcontrol>
    <controls>
	
	<control type="group">
			<posx>-660</posx>
			<posy>0</posy>
			<animation type="WindowOpen">
				<effect type="slide" start="0" end="660" time="250" tween="cubic" easing="inout" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="660" end="0" time="250" tween="cubic" easing="inout" />
			</animation>
			<!--Panel-->
		<control type="image">
			<posy>0</posy>
			<posx>0</posx>
			<width>485</width>
			<height>100%</height>
			<texture border="5">diffuse/panel.png</texture>
			<animation effect="fade" end="99" time="0" condition="true">Conditional</animation>
			<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
			<aspectratio>stretch</aspectratio>
		</control>
		
		
		<!-- header -->
        <control type="label">
            <posx>61</posx>
            <posy>10</posy>
            <width min="80" max="1100">auto</width>
            <height>100</height>
            <font>Bold45</font>
            <align>left</align>
            <textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
            <label>$LOCALIZE[298] ($INFO[Container(11).NumItems])</label>
			<visible>!Window.IsActive(DialogKaiToast.xml) + !Window.IsActive(DialogExtendedProgressBar.xml)</visible>
        </control>
            <!--Label Menu: -->
            <control type="image">
                <!--Seperator-->
                <posx>21</posx>
                <posy>130</posy>
                <width>458</width>
                <height>20</height>
                <align>left</align>
                <texture>common/menu-separator.png</texture>
            </control>
			<control type="image">
				<width>368</width>
                <posx>60</posx>
				<posy>135</posy>
				<height>200</height>
				<texture>$INFO[Container(11).ListItem.Icon]</texture>
				<aspectratio>keep</aspectratio>
			</control>
			<control type="image">
                <!--Seperator-->
                <posx>21</posx>
                <posy>330</posy>
                <width>458</width>
                <height>20</height>
                <align>left</align>
                <texture>common/menu-separator.png</texture>
            </control>
			<control type="image">
                <!--Seperator-->
                <posx>21</posx>
                <posy>1040</posy>
                <width>458</width>
                <height>20</height>
                <align>left</align>
                <texture>common/menu-separator.png</texture>
            </control>
		
			<control type="list" id="11">
                <!--List ID=11-->
                <width>458</width>
                <posx>60</posx>
                <posy>245</posy>
				<onright>Dialog.Close(all,true)</onright>
				<onleft>Dialog.Close(all,true)</onleft>
                <height>505</height>
                <onup>11</onup>
                <ondown>1</ondown>
                <scrolltime>100</scrolltime>
				
				<itemlayout width="368" height="65">
					<control type="group">
						<posy>120</posy>
						<control type="button">
							<label></label>
							<width>358</width>
							<height>60</height>
							<font>Reg24</font>
							<textcolor>blue</textcolor>
							<align>center</align>
							<aligny>center</aligny>
						</control>
						<control type="label"> <!--label-->
							<left>20</left>
							<width>320</width>
							<label>$INFO[ListItem.Label]$INFO[ListItem.Label2, (,)]</label>
							<font>Reg24</font>
							<scroll>false</scroll>
							<textcolor>$INFO[Skin.String(ButtonTextColor)]</textcolor>
							<focusedcolor>$INFO[Skin.String(ButtonTextColor)]</focusedcolor>
							<selectedcolor>$INFO[Skin.String(ButtonTextColor)]</selectedcolor>
							<disabledcolor>midgrey</disabledcolor>
						</control>
					</control>
				</itemlayout>
				
				<focusedlayout width="368" height="65">
					<control type="group">
						<posy>120</posy>
						<control type="button">
							<label></label>
							<width>358</width>
							<height>60</height>
							<font>Reg24</font>
							<textcolor>blue</textcolor>
							<align>center</align>
							<aligny>center</aligny>
							<visible>!Control.HasFocus(11)</visible>
						</control>
						<control type="image">
							<width>358</width>
							<height>60</height>
							<texture diffuse="diffuse/panel.png" border="5" colordiffuse="$INFO[Skin.String(ButtonFocusColor)]">colors/color_white.png</texture>
							<visible>Control.HasFocus(11)</visible>
						</control>
						<control type="label"> <!--label-->
							<left>20</left>
							<width>320</width>
							<label>$INFO[ListItem.Label]$INFO[ListItem.Label2, (,)]</label>
							<font>Reg24</font>
							<scroll>false</scroll>
							<textcolor>$INFO[Skin.String(ButtonFocusTextColor)]</textcolor>
							<selectedcolor>$INFO[Skin.String(ButtonFocusTextColor)]</selectedcolor>
							
							<visible>Control.HasFocus(11)</visible>
						</control>
						<control type="label"> <!--label-->
							<left>20</left>
							<width>320</width>
							<label>$INFO[ListItem.Label]</label>
							<font>Reg24</font>
							<scroll>false</scroll>
							<textcolor>$INFO[Skin.String(ButtonTextColor)]</textcolor>
							<focusedcolor>$INFO[Skin.String(ButtonTextColor)]</focusedcolor>
							<selectedcolor>$INFO[Skin.String(ButtonTextColor)]</selectedcolor>
							<visible>!Control.HasFocus(11)</visible>
						</control>
					</control>
				</focusedlayout>

			</control>
			
            <control type="grouplist" id="1">
                <!--Buttons-->
                <posx>65</posx>
                <posy>775</posy>
                <height>270</height>
                <width>400</width>
                <itemgap>5</itemgap>
                <orientation>vertical</orientation>
                <onup>11</onup>
                <onright>Dialog.Close(all,true)</onright>
                <control type="button" id="2">
                    <description>Add</description>
					<include>DialogButtonOther</include>
                    <height>60</height>
                    <width>370</width>
					<label>15019</label>
                </control>
                <control type="button" id="3">
                    <description>Delete</description>
					<include>DialogButtonOther</include>
                    <height>60</height>
                    <width>370</width>
					<label>117</label>
                </control>
				<control type="button" id="4">
                    <description>Episode Bookmarks</description>
					<include>DialogButtonOther</include>
                    <height>60</height>
                    <width>370</width>
					<label>20406</label>
					<visible>videoplayer.content(episodes)</visible>
                </control>
				<control type="button" id="99">
                    <description>Close</description>
					<include>DialogButtonOther</include>
                    <height>60</height>
                    <width>370</width>
					<label>222</label>
					<onclick>Dialog.Close(all,true)</onclick>
                </control>
            </control>
			
        </control>
	

    </controls>
</window>