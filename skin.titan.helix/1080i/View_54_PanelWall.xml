<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="View_54_PanelWall">
	
		<!-- panel no info -->
        <control type="group">
            <visible>Control.IsVisible(54)</visible>
            <include>animation_view_change</include>
			
			<control type="panel" id="54">
                <posx>60</posx>
                <posy>200</posy>
                <width>1840</width>
                <height>730</height>
                <onup>52</onup>
                <ondown>52</ondown>
                <onleft>9000</onleft>
                <onright>60</onright>
                <pagecontrol>60</pagecontrol>
                <viewtype label="31423">icons</viewtype>
                <scrolltime tween="Cubic" easing="inout">500</scrolltime>
                <focusposition>0</focusposition>
                <orientation>vertical</orientation>
                <preloaditems>2</preloaditems>
				<visible>!container.content(episodes)</visible>
				<visible>!Skin.HasSetting(ForcedViews.Enabled) | 
				[Container.Content(movies) + Skin.String(ForcedViews.movies,54)] | 
				[Container.Content(tvshows) + Skin.String(ForcedViews.tvshows,54)] | 
				[Container.Content(seasons) + Skin.String(ForcedViews.seasons,54)] | 
				[Container.Content(episodes) + Skin.String(ForcedViews.episodes,54)] | 
				[!Container.Content(movies) + !Container.Content(tvshows) + !Container.Content(seasons) + !Container.Content(episodes)]
				</visible>
                <!-- itemlayout movies -->
                <itemlayout height="245" width="182">
                    <control type="group">
						<posx>7</posx>
						<posy>7</posy>
						<control type="image">
							<include>SmallPanelPosterDimensions</include>
							<include>PosterThumbBG</include>
						  </control>
						  <control type="image">
							<include>SmallPanelPosterDimensions</include>
							<include>PosterThumb</include>
						  </control>
						  <include>SmallPosterViewWatchedImage</include>
					  </control>
                </itemlayout>
                <!-- focussed layout movies -->
                <focusedlayout height="245" width="182">
                    <control type="group">
						<posx>7</posx>
						<posy>7</posy>
						<!--Poster-->
						<animation type="focus">
							<effect type="zoom" start="100" end="130" center="auto" time="150" />
						</animation>
						<animation type="unfocus">
							<effect type="zoom" start="130" end="100" center="auto" time="150" />
						</animation>
					
						<control type="image">
						<include>SmallPanelPosterDimensions</include>
						<include>PosterThumbFO</include>
					  </control>
					  <control type="image">
						<include>SmallPanelPosterDimensions</include>
						<include>PosterThumb</include>
					  </control>
					  <include>SmallPosterViewWatchedImage</include>
				  </control>
				  
                </focusedlayout>
			</control>
		
			<!--vertical Scollbar-->
			<control type="scrollbar" id="60">
				<visible>Control.IsVisible(54)</visible>
				<right>15</right>
				<posy>175</posy>
				<width>25</width>
				<height>770</height>
				<onup>60</onup>
				<ondown>60</ondown>
				<onleft>54</onleft>
				<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)">Conditional</animation>
				<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)]">Conditional</animation>
			</control>
    
		</control>

    </include>
</includes>