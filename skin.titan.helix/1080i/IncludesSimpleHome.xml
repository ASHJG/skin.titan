              <font>Reg50</font>
			<scroll>false</scroll>
          </control>
        </itemlayout>
        <focusedlayout height="80" width="650">
			<!-- submenu indicator -->
			<control type="image">
				<animation effect="fade" start="0" end="50" tween="sine" easing="inout" time="1200" pulse="true" reversible="false" condition="true">Conditional</animation>
				<width>20</width>
				<height>80</height>
				<aspectratio>keep</aspectratio>
				<texture flipx="true">dialogs/videoinfo/arrow.png</texture>
				<visible>IntegerGreaterThan(Container(4444).NumItems,0)</visible>
				<colordiffuse>white</colordiffuse>
			</control>
			<!-- menu label -->
			<control type="label">
				<posx>35</posx>
				<width>615</width>
				<height>80</height>
				<align>left</align>
				<aligny>center</aligny>
				<textcolor>mainblue</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>[B][UPPERCASE]$INFO[ListItem.Label][/UPPERCASE][/B]</label>
				<font>Bold55</font>
			</control>
		  <control type="button">
				<visible>false</visible>
				<onfocus condition="Skin.HasSetting(UseSectionBackground) + !Player.HasMedia">Skin.SetString(SectionBackground,$VAR[homeBackground])</onfocus>
				<onfocus condition="!Skin.HasSetting(UseSectionBackground) + Skin.String(SectionBackground)">Skin.Reset(SectionBackground)</onfocus>
				<onfocus condition="!Skin.HasSetting(DisableAllSubmenus)">SetProperty(menu,300,Home)</onfocus>
				<onfocus condition="!Skin.HasSetting(DisableAllSubmenus) + Skin.HasSetting(AutoShowSubmenu) + skin.hastheme(classic)">SetFocus(4444)</onfocus>
				<onfocus condition="!Skin.HasSetting(DisableAllSubmenus) + Skin.HasSetting(AutoShowSubmenu) + !skin.hastheme(classic)">SetProperty(submenu,show,home)</onfocus>
				<onfocus condition="!Skin.HasSetting(DisableAllWidgets)">XBMC.RunScript(script.titanskin.helpers,SETWIDGET,300)</onfocus>
			</control>
        </focusedlayout>
        <content>
          <include>skinshortcuts-mainmenu</include>
        </content>
      </control>
    </control>
	
	<!-- widgets -->
	<control type="group">
		<posy>130</posy>
		<posx>1100</posx>
		<include condition="!Skin.HasSetting(DisableAllWidgets)">widgets</include>
		
		<control type="button" id="511">
			<right>-20</right>
			<bottom>0</bottom>
			<width>1000</width>
			<height>60</height>
			<align>right</align>
			<textcolor>grey</textcolor>
			<shadowcolor>black</shadowcolor>
			<focusedcolor>$INFO[Skin.String(ButtonFocusColor)]</focusedcolor>
