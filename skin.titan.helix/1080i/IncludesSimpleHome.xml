   <include name="simplehome_vertical">

    <control type="group">

      <control type="wraplist" id="300" description="Main Bar">
        <animation effect="fade" time="200" start="100" end="20" reversible="true" condition="!Control.HasFocus(300)">Conditional</animation>
        <posx>35</posx>
        <posy>160</posy>
        <width>650</width>
        <height>880</height>
        <onup>300</onup>
        <ondown>300</ondown>
        <onleft>4444</onleft>
        <onright>510</onright>
        <onback>4444</onback>
        <pagecontrol>-</pagecontrol>
        <focusposition>5</focusposition>
        <movement>0</movement>
				<!--<defaultcontrol always="true">1</defaultcontrol>-->
        <preloaditems>4</preloaditems>
        <itemlayout height="80" width="650">
          <control type="label">
            <posx>35</posx>
            <posy>0</posy>
            <width>650</width>
            <height>80</height>
            <align>left</align>
            <aligny>center</aligny>
