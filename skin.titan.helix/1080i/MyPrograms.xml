<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window id="1">
    <defaultcontrol always="true">50</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
	
	<onunload>ClearProperty(ShowViewSubMenu, Home)</onunload>
    <views>50,51,501,502,505,506,509,510,511,512,515,516</views>
    <controls>
        <!--Global Background-->
        <include>GlobalBackground</include>
        <!--Time & Weather-->
        <include condition="!Skin.HasSetting(DisableHeader)">TimeInfo</include>
        <!--Header-->
        <include condition="!Skin.HasSetting(DisableHeader)">Header</include>
        <!--Hidden Button-->
        <control type="radiobutton" id="19">
            <description>Filter (hidden)</description>
            <include>HiddenButton</include>
        </control>
		
		<!-- footer bar -->
		<control type="group">
			<visible>![Control.IsVisible(514) + StringCompare(Window(Home).Property(showinfopanel),show)]</visible>
			<include condition="!skin.hassetting(nofooterbar)">Footer</include>
		</control>
        <!--Views-->
		<control type="group">
			<include>animation_window_open_close</include>
			<visible>!Window.IsActive(DialogKeyboard.xml)</visible>
			<include>View_50_List</include>
			<include condition="!Skin.HasSetting(View.Disabled.51)">View_51_BigList</include>
			<include condition="!Skin.HasSetting(View.Disabled.501)">View_501_Landscape</include>
			<include condition="!Skin.HasSetting(View.Disabled.502)">View_502_LandscapeSingle</include>
			<include condition="!Skin.HasSetting(View.Disabled.505)">View_505_LandscapeDetails</include>
			<include condition="!Skin.HasSetting(View.Disabled.506)">ViewExtendedList</include>
			<include condition="!Skin.HasSetting(View.Disabled.509)">View_509_PanelSquare</include>
			<include condition="!Skin.HasSetting(View.Disabled.510)">View_510_PanelSquareDetails</include>
			<include condition="!Skin.HasSetting(View.Disabled.511)">View_511_Thumbs</include>
			<include condition="!Skin.HasSetting(View.Disabled.512)">View_512_ThumbsDetails</include>
			<include condition="!Skin.HasSetting(View.Disabled.515)">View_515_LowList</include>
			<include condition="!Skin.HasSetting(View.Disabled.516)">View_516_SlimList</include>
		</control>
        <!--Sub Menu Tab Left-->
        <include>SubMenuTabLeft</include>
		<include>SubMenuTabTop</include>
        <!--Sub Menu-->
        <control type="group">
            <include condition="skin.hastheme(classic)">SideBladeClassic</include>
			<include condition="!skin.hastheme(classic)">SideBladeModern</include>
            <!--Grouplist 9000-->
            <control type="grouplist" id="9000">
                <posx>21</posx>
                <posy>190</posy>
                <width>458</width>
                <height>750</height>
                <itemgap>3</itemgap>
                <onleft>50</onleft>
                <onright>50</onright>
				<visible>!Skin.HasSetting(KioskMode.Enabled)</visible>
				<onright>ClearProperty(ShowViewSubMenu, Home)</onright>
				<onleft>ClearProperty(ShowViewSubMenu, Home)</onleft>
				<onback>ClearProperty(ShowViewSubMenu, Home)</onback>
                <onup>9000</onup>
                <ondown>9000</ondown>
                <orientation>vertical</orientation>
                <!--Buttons-->
                <control type="label" id="200">
                    <!--Label Menu-->
                    <width>458</width>
                    <align>left</align>
                    <textoffsetx>50</textoffsetx>
                    <font>Bold40</font>
                    <textcolor>$VAR[ThemeFontColorBlack]</textcolor>
                    <label>$LOCALIZE[33061]:</label>
					<visible>skin.hastheme(classic)</visible>
                </control>
                <control type="image" id="201">
                    <!--Seperator-->
                    <width>458</width>
                    <height>10</height>
                    <align>left</align>
                    <texture>common/menu-separator.png</texture>
					<visible>skin.hastheme(classic)</visible>
                </control>
                <control type="button" id="3">
                    <!--Sort-->
                    <include>SubMenuButton</include>
                </control>
                <control type="togglebutton" id="4">
                    <!--Ascending-->
                    <include>SubMenuButton</include>
                    <label>584</label>
                    <altlabel>585</altlabel>
                </control>
                <control type="button" id="400">
                    <!--Set View-->
                    <include>SubMenuButton</include>
                    <label>$LOCALIZE[31305] $INFO[Container.Viewmode]</label>
					<onclick>XBMC.RunScript(script.titanskin.helpers,SETVIEW)</onclick>
				</control>
				<include>SideBladeViewCommands</include>
            </control>
        </control>
    </controls>
</window>