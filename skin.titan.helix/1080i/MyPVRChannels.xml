<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol>51</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	
	<onunload>ClearProperty(ShowViewSubMenu, Home)</onunload>
	<views>11,51,501,502,505,506,509,510,511,512,515</views>
    <controls>
        <!--Global Background-->
        <include>GlobalBackground</include>
		<!--Header-->
        <include condition="!Skin.HasSetting(DisableHeader)">Header</include>
		<!--NowPlaying-->
		<include condition="!Skin.HasTheme(classic)">NowPlayingModern</include>
        <!--Time & Weather-->
        <include condition="!Skin.HasSetting(DisableHeader)">TimeInfo</include>
        
		
		<!--Footer-->
		<include condition="!skin.hassetting(nofooterbar)">Footer</include>

        <!--PVR Views-->
        <control type="group" id="5000">
			<include>animation_window_open_close</include>
			<include>View_51_BigList</include>
			<include>ViewExtendedList</include>
			<include>View_501_Landscape</include>
			<include>View_502_LandscapeSingle</include>
			<include>View_505_LandscapeDetails</include>
			<include>View_509_PanelSquare</include>
			<include>View_510_PanelSquareDetails</include>
			<include>View_511_Thumbs</include>
			<include>View_512_ThumbsDetails</include>
			<include>View_515_LowList</include>
            
			<control type="group">
				<visible>Control.IsVisible(11)</visible>
				<include>PVRpanelBackground</include>
				<control type="group">
					<!--Video Window-->
					<visible>Control.IsVisible(11)</visible>
					<include>animation_view_change_pvr</include>
					<posx>118</posx>
					<posy>340</posy>
					<control type="image">
						<width>300</width>
						<height>200</height>
						<texture diffuse="home/home_matte.png">$INFO[ListItem.Thumb]</texture>
						<aspectratio align="left" aligny="top">keep</aspectratio>
						<visible>![VideoPlayer.Content(livetv) + Skin.HasSetting(PVRShowPreview)]</visible>
					</control>
					<!--Video Window -->
					<control type="videowindow">
						<posx>5</posx>
						<posy>-5</posy>
						<width>300</width>
						<height>200</height>
						<visible>VideoPlayer.Content(livetv) + Skin.HasSetting(PVRShowPreview)</visible>
					</control>
				</control>
				<control type="group">
					<animation effect="slide" start="0" end="-330" time="0" condition="IsEmpty(ListItem.Thumb)">Conditional</animation>
					<!--Start, End, Next-->
					<visible>Control.IsVisible(11)</visible>
					<include>animation_view_change_pvr</include>
					<posx>450</posx>
					<posy>330</posy>
					<control type="group">
						<!-- Ground 1 -->
						<posy>0</posy>
						<control type="label">
							<posx>0</posx>
							<posy>0</posy>
							<width>180</width>
							<textcolor>$INFO[Skin.String(ViewDetailsFocusColor)]</textcolor>
							<shadowcolor>$INFO[Skin.String(ViewDetailsFocusShadowColor)]</shadowcolor>
							<label>$LOCALIZE[19030] :</label>
						</control>
						<control type="fadelabel">
							<posx>145</posx>
							<posy>0</posy>
							<width>300</width>
							<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
							<shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
							<label>$INFO[Container(11).ListItem.Title]</label>
						</control>
					</control>
					<control type="group">
						<!-- Ground 2 -->
						<posy>40</posy>
						<control type="label">
							<posx>0</posx>
							<posy>0</posy>
							<width>180</width>
							<textcolor>$INFO[Skin.String(ViewDetailsFocusColor)]</textcolor>
							<shadowcolor>$INFO[Skin.String(ViewDetailsFocusShadowColor)]</shadowcolor>
							<label>$LOCALIZE[19126] :</label>
						</control>
						<control type="label">
							<posx>145</posx>
							<posy>0</posy>
							<width>300</width>
							<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
							<shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
							<label>$INFO[Container(11).ListItem.StartTime]</label>
						</control>
					</control>
					<control type="group">
						<!-- Ground 3 -->
						<posy>80</posy>
						<control type="label">
							<posx>0</posx>
							<posy>0</posy>
							<width>180</width>
							<textcolor>$INFO[Skin.String(ViewDetailsFocusColor)]</textcolor>
							<shadowcolor>$INFO[Skin.String(ViewDetailsFocusShadowColor)]</shadowcolor>
							<label>$LOCALIZE[19127] :</label>
						</control>
						<control type="label">
							<posx>145</posx>
							<posy>0</posy>
							<width>300</width>
							<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
							<shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
							<label>$INFO[Container(11).ListItem.EndTime]</label>
						</control>
					</control>
				</control>
				<control type="group">
					<!--Infos-->
					<visible>Control.IsVisible(11)</visible>
					<include>animation_view_change_pvr</include>
					<control type="textbox">
						<shadowcolor></shadowcolor>
						<!--Info Plot-->
						<posx>120</posx>
						<posy>560</posy>
						<width>830</width>
						<height>240</height>
						<font>Light32</font>
						<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
						<shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
						<label>$INFO[ListItem.Plot]</label>
					</control>
					<control type="label">
						<!--Next Start Dat -->
						<posx>120</posx>
						<posy>810</posy>
						<width>800</width>
						<font>Reg30</font>
						<textcolor>$INFO[Skin.String(ViewDetailsFocusColor)]</textcolor>
							<shadowcolor>$INFO[Skin.String(ViewDetailsFocusShadowColor)]</shadowcolor>
						<label>$INFO[Container(11).ListItem.NextStartDate]</label>
						<scroll>false</scroll>
					</control>
					<control type="label">
						<!--Next Title-->
						<posx>120</posx>
						<posy>845</posy>
						<width>800</width>
						<font>Light28</font>
						<textcolor>$INFO[Skin.String(ViewDetailsFocusColor)]</textcolor>
						<shadowcolor>$INFO[Skin.String(ViewDetailsFocusShadowColor)]</shadowcolor>
						<label>$LOCALIZE[19031] : $INFO[Container(11).ListItem.NextTitle] $INFO[Container(11).ListItem.NextStartTime] - $INFO[Container(11).ListItem.NextEndTime]</label>
						<scroll>false</scroll>
					</control>
				</control>
				<control type="list" id="11">
					<!--List ID=11-->
					<include>animation_view_change_pvr</include>
					<posx>1010</posx>
					<posy>340</posy>
					<width>1920</width>
					<height>570</height>
					<onleft>9000</onleft>
					<onright>70</onright>
					<onup>11</onup>
					<ondown>11</ondown>
					<viewtype label="535">list</viewtype>
					<pagecontrol>70</pagecontrol>
					<scrolltime>200</scrolltime>
					<!-- =========== -->
					<!-- x=980 w=765 -->
					<!-- =========== -->
					<itemlayout height="60" width="840">
						<control type="label">
							<!--Channel Number-->
							<posx>15</posx>
							<posy>5</posy>
							<width>100</width>
							<height>50</height>
							<font>Reg34</font>
							<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
							<selectedcolor>$INFO[Skin.String(ViewDetailsFocusColor)]</selectedcolor>
							<align>left</align>
							<info>ListItem.ChannelNumberLabel</info>
						</control>
						<control type="image">
							<!--Rec-->
							<posx>135</posx>
							<posy>0</posy>
							<width>55</width>
							<height>55</height>
							<texture>pvr/icons/pvr_record.png</texture>
							<visible>ListItem.IsRecording</visible>
							<aspectratio align="center" aligny="center">keep</aspectratio>
						</control>
						<control type="image">
							<!--Now Playing Icon-->
							<posx>135</posx>
							<posy>0</posy>
							<width>55</width>
							<height>55</height>
							<fadetime>600</fadetime>
							<texture>pvr/icons/pvr_play.png</texture>
							<visible>ListItem.Isplaying</visible>
							<visible>!ListItem.IsRecording</visible>
							<aspectratio align="center" aligny="center">keep</aspectratio>
						</control>
						<control type="image">
							<!--Chanel Icon-->
							<posx>70</posx>
							<posy>5</posy>
							<width>48</width>
							<height>48</height>
							<texture>$INFO[ListItem.Thumb]</texture>
							<aspectratio align="center" aligny="center">keep</aspectratio>
						</control>
						<control type="label">
							<!--Channel Name-->
							<posx>200</posx>
							<width>545</width>
							<height>55</height>
							<font>Reg29</font>
							<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
							<selectedcolor>$INFO[Skin.String(ViewDetailsTextColor)]</selectedcolor>
							<align>left</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</itemlayout>
					<focusedlayout height="90" width="840">
						<control type="image">
							<posy>0</posy>	
							<posx>0</posx>
							<width>840</width>
							<height>90</height>
							<texture border="5">diffuse/box.png</texture>
							<colordiffuse>$VAR[panel_color]</colordiffuse>
						</control>
						<control type="label">
							<!--Channel Number-->
							<posx>15</posx>
							<posy>5</posy>
							<width>100</width>
							<height>50</height>
							<font>Reg36</font>
							<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
							<selectedcolor>$INFO[Skin.String(ViewDetailsTextColor)]</selectedcolor>
							<align>left</align>
							<info>ListItem.ChannelNumberLabel</info>
						</control>
						<control type="image">
							<!--Rec-->
							<posx>135</posx>
							<posy>0</posy>
							<width>55</width>
							<height>55</height>
							<texture>pvr/icons/pvr_record.png</texture>
							<visible>ListItem.IsRecording</visible>
							<aspectratio align="center" aligny="center">keep</aspectratio>
						</control>
						<control type="image">
							<!--Now Playing Icon-->
							<posx>135</posx>
							<posy>0</posy>
							<width>55</width>
							<height>55</height>
							<fadetime>600</fadetime>
							<texture>pvr/icons/pvr_play.png</texture>
							<visible>ListItem.Isplaying</visible>
							<visible>!ListItem.IsRecording</visible>
							<aspectratio align="center" aligny="center">keep</aspectratio>
						</control>
						<control type="image">
							<!--Chanel Icon-->
							<posx>70</posx>
							<posy>5</posy>
							<width>48</width>
							<height>48</height>
							<texture>$INFO[ListItem.Thumb]</texture>
							<aspectratio align="center" aligny="center">keep</aspectratio>
						</control>
						<control type="label">
							<!--Channel Name-->
							<posx>200</posx>
							<width>545</width>
							<height>55</height>
							<font>Reg32</font>
							<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
							<selectedcolor>$INFO[Skin.String(ViewDetailsTextColor)]</selectedcolor>
							<align>left</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<!--Details-->
						<control type="label">
							<posx>200</posx>
							<posy>30</posy>
							<height>60</height>
							<align>left</align>
							<scroll>true</scroll>
							<label>$VAR[Details]</label>
							<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
							<shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
							<font>Light26</font>
						</control>

					</focusedlayout>
				</control>
				<control type="group">
                <!--Scrollbar-->
                <include>animation_view_change_pvr</include>
                
                <control type="scrollbar" id="70">
                    <!--Scrollbar ID70-->
                    <posx>1815</posx>
                    <posy>330</posy>
                    <height>580</height>
                    <onleft>11</onleft>
                    <onright>11</onright>
                    <animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(70) | Skin.HasSetting(EnableTouchSupport) | Skin.HasSetting(alwaysShowScrollbars)">Conditional</animation>
					<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(70) | Skin.HasSetting(EnableTouchSupport) | Skin.HasSetting(alwaysShowScrollbars)]">Conditional</animation>
                </control>
            </control>
			</control>
			
			<!--Scrolling Letter-->
			<control type="image">
				<visible>Container.Scrolling</visible>
				<posx>910</posx>
				<posy>480</posy>
				<width>100</width>
				<height>100</height>
				<texture border="5">diffuse/box.png</texture>
				<animation effect="fade" end="85" time="0" condition="true">Conditional</animation>
				<colordiffuse>$VAR[panel_color]</colordiffuse>
				<animation effect="fade" start="0" end="100" time="400" delay="30">Visible</animation>
				<animation effect="fade" start="100" end="0" time="400" delay="150">Hidden</animation>
			</control>
			<control type="image">
				<visible>Container.Scrolling</visible>
				<posx>910</posx>
				<posy>480</posy>
				<width>100</width>
				<height>100</height>
				<texture border="5">diffuse/box.png</texture>
				<bordersize>8</bordersize>
				<animation effect="fade" end="99" time="0" condition="true">Conditional</animation>
				<colordiffuse>$VAR[panel_color]</colordiffuse>
				<animation effect="fade" start="0" end="100" time="400" delay="30">Visible</animation>
				<animation effect="fade" start="100" end="0" time="400" delay="150">Hidden</animation>
			</control>
			<control type="label">
				<visible>Container.Scrolling</visible>
				<posx>910</posx>
				<posy>480</posy>
				<width>100</width>
				<height>100</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>Bold55</font>
				<textcolor>$INFO[Skin.String(ViewDetailsFocusColor)]</textcolor>
				<label>$INFO[ListItem.SortLetter]</label>
				<animation effect="fade" start="0" end="100" time="400" delay="30">Visible</animation>
				<animation effect="fade" start="100" end="0" time="400" delay="150">Hidden</animation>
			</control>
			
        </control>
        
		<!--Sub Menu-->
        <include>SubMenuTabLeft</include>
		<include>SubMenuTabTop</include>
		<include>PVRsideblade</include>
		
		<!--NowPlaying-->
        <include condition="Skin.HasTheme(classic)">NowPlayingMusicClassic</include>
        <include condition="Skin.HasTheme(classic)">NowPlayingVideoClassic</include>
    </controls>
</window>