<?xml version="1.0" encoding="UTF-8"?>

<includes>

	<include name="ViewExtendedList">
	
	
		<control type="group">
		
			<posx>30</posx>
			<bottom>110</bottom>
			<height>840</height>
			<defaultcontrol always="true">506</defaultcontrol>
			<visible>Control.IsVisible(506)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
			<include>animation_view_change</include>
			

			<control type="panel" id="506">
					
				<posx>20</posx>
				<posy>-30</posy>
				<width>1820</width>
				<height>840</height>
				<onup>9000</onup>
				<ondown>60</ondown>
				<onleft>506</onleft>
				<onright>506</onright>
				<viewtype label="31433">biglist</viewtype>
				<orientation>horizontal</orientation>
				<pagecontrol>60</pagecontrol>
				<scrolltime tween="cubic" easing="out">600</scrolltime>
				<preloaditems>2</preloaditems>
				<visible>!Skin.HasSetting(SkinHelper.ForcedViews.Enabled) | 
				[Container.Content(movies) + Skin.String(SkinHelper.ForcedViews.movies,None)] | 
				[Container.Content(tvshows) + Skin.String(SkinHelper.ForcedViews.tvshows,None)] | 
				[Container.Content(seasons) + Skin.String(SkinHelper.ForcedViews.seasons,None)] | 
				[Container.Content(episodes) + Skin.String(SkinHelper.ForcedViews.episodes,None)] | 
				[[Container.Content(sets) | StringCompare(Container.Folderpath,videodb://movies/sets/)] + Skin.String(SkinHelper.ForcedViews.sets,506)] | 
				[Container.Content(movies) + Skin.String(SkinHelper.ForcedViews.movies,506) + !substring(Container.FolderPath,videodb://movies/sets/,left)] | 
				[Container.Content(movies) + Skin.String(SkinHelper.ForcedViews.setmovies,506) + substring(Container.FolderPath,setid=)] | 
				[Container.Content(tvshows) + Skin.String(SkinHelper.ForcedViews.tvshows,506)] | 
				[Container.Content(seasons) + Skin.String(SkinHelper.ForcedViews.seasons,506)] | 
				[Container.Content(episodes) + Skin.String(SkinHelper.ForcedViews.episodes,506)] | 
				[!Container.Content(movies) + !Container.Content(tvshows) + !Container.Content(seasons) + !Container.Content(episodes) + !Container.Content(sets)]
				</visible>

				<itemlayout width="454" height="900">
				
					<control type="group">
						<posx>0</posx>
						<posy>40</posy>
						<width>460</width>
						<height>900</height>

						<control type="image">
							<posx>8</posx>
							<posy>7</posy>
							<width>443</width>
							<height>765</height>
							<texture border="5">diffuse/panel.png</texture>
							<colordiffuse>$INFO[Skin.String(ViewDetailsPanelColor)]</colordiffuse>
						</control>
						
						<control type="image">
							<!--Panel icon image-->
							<posx>18</posx>
							<posy>18</posy>
							<width>423</width>
							<height>250</height>
							<texture background="true" diffuse="home/home_matte2.png" fallback="special://skin/extras/defaulticonswide/DefaultVideo.png">$VAR[BannerLandscapeImage]</texture>
							<aspectratio scalediffuse="true" align="center" aligny="center">stretch</aspectratio>
						</control>
						<control type="image">
							<!--season image legacy-->
							<posx>18</posx>
							<posy>18</posy>
							<width>423</width>
							<height>250</height>
							<texture background="true" diffuse="home/home_matte2.png">$VAR[BannerLandscapeImageSeason]</texture>
							<aspectratio scalediffuse="true" align="center" aligny="center">stretch</aspectratio>
							<visible>Container.Content(Seasons) + !substring(Container.FolderPath,plugin://plugin.video)</visible>
						</control>
						
						<control type="group">
							<!--Watched Overlay-->
							<right>18</right>
							<top>18</top>
							<include>WatchedIndicatorNormal</include>
						</control>
						
						<control type="label">
							<posx>25</posx>
							<posy>360</posy>
							<width>400</width>
							<height>80</height>
							<label>$INFO[ListItem.Genre,,[CR]]$VAR[ListDetails]</label>
							<font>Reg24</font>
							<textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
						</control>
						
						<control type="textbox">
							<posx>25</posx>
							<posy>280</posy>
							<width>400</width>
							<height>80</height>
							<label>$VAR[View_Item_Header]</label>
							<font>Bold32</font>
							<textcolor>$INFO[Skin.String(ViewDetailsHighlightTextColor)]</textcolor>
							<aligny>top</aligny>
						</control>
						
						<control type="textbox">
							<posx>25</posx>
							<posy>440</posy>
							<width>410</width>
							<height>305</height>
							<label>$VAR[Plots]</label>
							<font>Reg24</font>
							<textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
							<aligny>top</aligny>
							<autoscroll>false</autoscroll>
						</control>
						
						
					</control>
				</itemlayout>
				<focusedlayout width="454" height="900">
				
					<control type="group">
						<posx>0</posx>
						<posy>40</posy>
						<width>460</width>
						<height>900</height>
						
						<control type="image">
							<posx>8</posx>
							<posy>7</posy>
							<width>443</width>
							<height>765</height>
							<texture border="5">diffuse/panel.png</texture>
							<colordiffuse>$INFO[Skin.String(ViewDetailsFocusColor)]</colordiffuse>
						</control>
						
						<control type="image">
							<!--Panel icon image-->
							<posx>18</posx>
							<posy>18</posy>
							<width>423</width>
							<height>250</height>
							<texture background="true" diffuse="home/home_matte2.png" fallback="special://skin/extras/defaulticonswide/DefaultVideo.png">$VAR[BannerLandscapeImage]</texture>
							<aspectratio scalediffuse="true" align="center" aligny="center">stretch</aspectratio>
						</control>
						<control type="image">
							<!--season image legacy-->
							<posx>18</posx>
							<posy>18</posy>
							<width>423</width>
							<height>250</height>
							<texture background="true" diffuse="home/home_matte2.png">$VAR[BannerLandscapeImageSeason]</texture>
							<aspectratio scalediffuse="true" align="center" aligny="center">stretch</aspectratio>
							<visible>Container.Content(Seasons) + !substring(Container.FolderPath,plugin://plugin.video)</visible>
						</control>
						
						
						<control type="group">
							<!--Watched Overlay-->
							<right>18</right>
							<top>18</top>
							<include>WatchedIndicatorNormal</include>
						</control>
					
						<control type="textbox">
							<posx>25</posx>
							<posy>280</posy>
							<width>400</width>
							<height>80</height>
							<label>$VAR[View_Item_Header]</label>
							<font>Bold32</font>
							<textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
							<aligny>top</aligny>
						</control>
						
						<control type="label">
							<posx>25</posx>
							<posy>360</posy>
							<width>400</width>
							<height>80</height>
							<label>[COLOR=$INFO[Skin.String(ViewDetailsHighlightTextColor)]]$INFO[ListItem.Genre,,[CR]][/COLOR]$VAR[ListDetails]</label>
							<font>Reg24</font>
							<textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
						</control>
						
						<control type="textbox">
							<posx>25</posx>
							<posy>440</posy>
							<width>410</width>
							<height>305</height>
							<label>$VAR[Plots]</label>
							<font>Reg24</font>
							<textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
							<aligny>top</aligny>
						</control>
					
					</control>	
					
				</focusedlayout>

			
			</control>
		
			<!--horizontal Scrollbar-->
			<control type="group">
				<control type="scrollbar" id="60">
					<visible>Control.IsVisible(506)</visible>
					<left>30</left>
					<posy>795</posy>
					<width>1800</width>
					<height>15</height>
					<onup>506</onup>
					<onleft>60</onleft>
					<onright>60</onright>
					<orientation>horizontal</orientation>
					<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)">Conditional</animation>
					<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)]">Conditional</animation>
				</control>
			</control>
			
		
		</control>
		
	</include>

</includes>
