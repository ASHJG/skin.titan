<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
	<defaultcontrol>-</defaultcontrol>
	<allowoverlay>false</allowoverlay>
    <controls>
         <!--fallback background -->
        <control type="group">
			<include>GlobalBackground</include>
            <visible>[!Control.IsVisible(3333) | IsEmpty(Control.GetLabel(3333))] + [!Control.IsVisible(3334) | IsEmpty(Control.GetLabel(3334))]</visible>
		</control>
         <include>NowPlayingBackground</include>

        <control type="group">
            <include>HideOsdConditions</include>
			<include condition="skin.hastheme(classic)">MusicOSDClassic</include>
			<include condition="!Skin.HasTheme(classic) + !Skin.HasSetting(UseSlimOSDPanel)">OSDPanelModern</include>
			<include condition="!Skin.HasTheme(classic) + Skin.HasSetting(UseSlimOSDPanel)">OSDPanelModernSlimMusic</include>
			<visible>[Skin.HasSetting(AlwaysShowMusicInfo) | Player.ShowInfo | Window.IsActive(MusicOSD)]</visible>
            <animation effect="slide" end="0,-50" time="0" condition="Skin.HasSetting(enableArtistBio) + !IsEmpty(Window(Home).Property(SkinHelper.Player.Music.Info))">Conditional</animation>
			<animation effect="slide" start="0,400" end="0,0" tween="cubic" easing="out" delay="300" time="250" reversible="false">Visible</animation>
			<animation effect="slide" start="0,0" end="0,400" tween="cubic" easing="out" delay="300" time="250" reversible="false">Hidden</animation>
		</control>
        
        <!--artist BIO-->
        <control type="group">
            <visible>Skin.HasSetting(enableArtistBio) + !IsEmpty(Window(Home).Property(SkinHelper.Player.Music.Info))</visible>
            <control type="image">
                <bottom>0</bottom>
                <width>100%</width>
                <height>50</height>
                <texture border="5">$VAR[osdpanelimage]</texture>
                <colordiffuse>$INFO[Skin.String(OSDPanelColor)]</colordiffuse>
            </control>
            <control type="fadelabel">
                <bottom>17</bottom>
                <left>0</left>
                <width>1920</width>
                <height>20</height>
                <scroll>true</scroll>
                <scrollout>false</scrollout>
                <textcolor>$INFO[Skin.String(OSDPrimaryTextColor)]</textcolor>
                <shadowcolor>$INFO[Skin.String(OSDPrimaryTextShadowColor)]</shadowcolor>
                <font>Reg30</font>
                <scrollspeed>80</scrollspeed>
                <label>$INFO[Window(Home).Property(SkinHelper.Player.Music.Info)]</label>
                <visible>!Window.IsActive(script-cu-lrclyrics-main.xml)</visible>
                <visible>Skin.HasSetting(enableArtistBio)</visible>
            </control>
        </control>
		
		<!--clearlogo top right-->
		<control type="image">
			<right>40</right>
			<top>20</top>
			<width>550</width>
			<height>180</height>
			<fadetime>600</fadetime>
			<aspectratio align="right" aligny="top">keep</aspectratio>
			<texture>$INFO[Window(Home).Property(SkinHelper.Player.Music.ClearLogo)]</texture>
            <visible>Skin.String(MusicArtistLogo,enabled) | [Skin.String(MusicArtistLogo,osd) + [Player.ShowInfo | Window.IsActive(MusicOSD)]]</visible>
            <include>animation_fade_visible_hidden_delayed</include>
		</control>

    </controls>
</window>