<?xml version="1.0" encoding="utf-8"?>
<includes>

<include name="TouchControlsHome">
	<!-- page button left -->
	<control type="button">
		<left>0</left>
		<top>465</top>
		<width>30</width>
		<height>149</height>
		<align>center</align>
		<aligny>center</aligny>
		<label>-</label>
		<pulseonselect>false</pulseonselect>
		<texturefocus colordiffuse="white">basichome_left.png</texturefocus>
		<texturenofocus>basichome_left.png</texturenofocus>
		<onclick>PageUp(60)</onclick>
		<visible>Control.IsVisible(300) + Container(300).HasPrevious + !ControlGroup(77777).HasFocus</visible>
	</control>

	<!-- page button right -->
	<control type="button">
		<right>0</right>
		<top>465</top>
		<width>30</width>
		<height>149</height>
		<align>center</align>
		<aligny>center</aligny>
		<label>-</label>
		<pulseonselect>false</pulseonselect>
		<texturefocus colordiffuse="white">basichome_right.png</texturefocus>
		<texturenofocus>basichome_right.png</texturenofocus>
		<onclick>PageDown(60)</onclick>
		<visible>Control.IsVisible(300) + Container(300).HasNext + !ControlGroup(77777).HasFocus</visible>
	</control>
</include>

<include name="TouchControlsFooter">
	<control type="grouplist">
		<posx>60</posx>
		<posy>1005</posy>
		<width>1000</width>
		<height>130</height>
		<itemgap>25</itemgap>
		<onup>noop</onup>
		<ondown>noop</ondown>
		<onleft>200</onleft>
		<onright>200</onright>
		<orientation>horizontal</orientation>
		<animation effect="zoom" start="100" end="80" center="auto" easing="out" tween="back" time="0" condition="skin.hastheme(classic)">Conditional</animation>
		<animation effect="slide" start="0,0" end="0,-31" center="auto" easing="out" tween="back" time="0" condition="skin.hastheme(classic)">Conditional</animation>
		<animation time="200" effect="fade" start="100" end="0" delay="0" condition="SubString(Window(Home).Property(submenu),show) + !skin.hastheme(classic)">Conditional</animation>
		<visible>!Window.IsActive(startup)</visible>
		<control type="button">
			<visible>!Window.IsActive(Home)</visible>
			<include>animation_fade_visible_hidden</include>
			<width>60</width>
			<height>60</height>
			<label>210</label>
			<font>-</font>
			<texturefocus colordiffuse="white">icon_home.png</texturefocus>
			<texturenofocus colordiffuse="bbwhite">icon_home.png</texturenofocus>
			<aspectratio>keep</aspectratio>
			<onclick>ActivateWindow(Home)</onclick>
			<onclick>ClearProperty(ShowViewSubMenu, Home)</onclick>
		</control>
		<control type="button">
			<label></label>
			<include>animation_fade_visible_hidden</include>
			<width>60</width>
			<height>60</height>
			<font>-</font>
			<texturefocus colordiffuse="white">icon_back.png</texturefocus>
			<texturenofocus colordiffuse="bbwhite">icon_back.png</texturenofocus>
			<aspectratio aligny="bottom">keep</aspectratio>
			<onclick>Back</onclick>
			<onclick>ClearProperty(ShowViewSubMenu, Home)</onclick>
			<visible>!Window.IsActive(Home)</visible>
		</control>
		<control type="button">
			<label></label>
			<include>animation_fade_visible_hidden</include>
			<width>60</width>
			<height>60</height>
			<font>-</font>
			<texturefocus colordiffuse="white">icon_power.png</texturefocus>
			<texturenofocus colordiffuse="bbwhite">icon_power.png</texturenofocus>
			<aspectratio aligny="bottom">keep</aspectratio>
			<onclick>ActivateWindow(111)</onclick>
			<onclick>ClearProperty(ShowViewSubMenu, Home)</onclick>
			<visible>Window.IsActive(Home)</visible>
		</control>
		<!-- settings button on home -->
		<control type="button">
			<label></label>
			<include>animation_fade_visible_hidden</include>
			<width>60</width>
			<height>60</height>
			<font>-</font>
			<texturefocus colordiffuse="white">icon_settings.png</texturefocus>
			<texturenofocus colordiffuse="bbwhite">icon_settings.png</texturenofocus>
			<aspectratio aligny="bottom">keep</aspectratio>
			<onclick>ActivateWindow(settings)</onclick>
			<visible>Window.IsActive(Home)</visible>
		</control>
		<!-- sideblade menu -->
		<control type="button">
			<label></label>
			<include>animation_fade_visible_hidden</include>
			<width>60</width>
			<height>60</height>
			<font>-</font>
			<texturefocus colordiffuse="white">icon_menu.png</texturefocus>
			<texturenofocus colordiffuse="bbwhite">icon_menu.png</texturenofocus>
			<aspectratio aligny="bottom">keep</aspectratio>
			<onclick condition="!StringCompare(Window(Home).Property(ShowViewSubMenu),show)">SetProperty(ShowViewSubMenu, show, Home)</onclick>
			<onclick condition="StringCompare(Window(Home).Property(ShowViewSubMenu),show)">ClearProperty(ShowViewSubMenu, Home)</onclick>
			<visible>Control.IsVisible(9000) + !Window.IsActive(settings) + !Window.IsActive(settingscategory.xml) + !Window.IsActive(DialogContextMenu.xml)</visible>
		</control>
		<!-- show widget -->
		<control type="button">
			<label></label>
			<include>animation_fade_visible_hidden</include>
			<width>60</width>
			<height>60</height>
			<font>-</font>
			<texturefocus colordiffuse="white">icon_menu.png</texturefocus>
			<texturenofocus colordiffuse="bbwhite">icon_menu.png</texturenofocus>
			<aspectratio aligny="bottom">keep</aspectratio>
			<onclick condition="!ControlGroup(77777).HasFocus">XBMC.RunScript(script.titanskin.helpers,SHOWWIDGET)</onclick>
			<onclick condition="ControlGroup(77777).HasFocus">Control.SetFocus(300)</onclick>
			<visible>Window.IsActive(Home)</visible>
			<visible>!IsEmpty(Container(300).ListItem.Property(widget))</visible>
		</control>
	</control>
</include>

</includes>