<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window id="0">
    <defaultcontrol always="true">300</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
	<onload condition="!Skin.String(GadgetRows, netflix)">RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=300&amp;group=mainmenu|powermenu)</onload>
	<onload condition="Skin.String(GadgetRows, netflix)">RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=9000&amp;group=mainmenu|powermenu)</onload>
    <include>defaultskinsettings</include>
	<onload>300</onload>
	<onload condition="!SubString(Window(Home).Property(HomeLoaded),loaded)">SetProperty(HomeLoaded,loaded,Home)</onload>
	<onload condition="Skin.String(GadgetRows, enhanced)">AlarmClock(SpotlightMove,Control.Move(1508,1),00:08,silent,loop)</onload>
	<onload condition="Skin.String(GadgetRows, netflix)">AlarmClock(SpotlightMove,Control.Move(510,1),00:30,silent,loop)</onload>
	<onunload>ClearProperty(ShowViewSubMenu)</onunload>
	<onunload>CancelAlarm(SpotlightMove,true)</onunload>
	<onunload>ClearProperty(submenu)</onunload>
	<onunload>ClearProperty(ShowWidget)</onunload>
    <onload>ClearProperty(submenu)</onload>
	<onunload>Dialog.Close(shutdownmenu,true)</onunload>
	<onload>ClearProperty(SkinHelper.ExtraFanArtPath)</onload>
	<onload>SetProperty(homevisible,visible)</onload>
	<onunload>SetProperty(homevisible,hidden)</onunload>
	<onload condition="Skin.HasSetting(UseSectionBackground)">SetProperty(SectionBackground,$INFO[Container(300).ListItem.Property(defaultID)],Home)</onload>
	<onload condition="Skin.HasSetting(UseSectionBackground) + !IsEmpty(Container(300).ListItem.Property(Background))">SetProperty(SectionBackgroundValue,$INFO[Container(300).ListItem.Property(Background)],Home)</onload>
	<onload condition="Skin.HasSetting(UseSectionBackground) + IsEmpty(Container(300).ListItem.Property(Background))">ClearProperty(SectionBackgroundValue,Home)</onload>
    <controls>
	
	<!--Global Background-->
	<include>GlobalBackground</include>
		
		
		<!-- Header -->
		<include condition="Skin.HasSetting(EnableTouchSupport)">TouchScreenWorkaround</include>
		
		<!--NowPlaying-->
		<include condition="Skin.HasTheme(classic)">NowPlayingMusicClassic</include>
		<include condition="Skin.HasTheme(classic)">NowPlayingVideoClassic</include>
		<include condition="!Skin.HasTheme(classic)">NowPlayingModern</include>
		
		<!--Footer-->
		<control type="group">
			<include condition="[!skin.hassetting(nofooterbar) + !Skin.String(GadgetRows, enhanced) + !Skin.String(GadgetRows, simplever) + !Skin.String(GadgetRows, netflix)] + ![Skin.String(GadgetRows, simplehor) + !system.getbool(lookandfeel.enablerssfeeds) + !Skin.HasSetting(EnableTouchSupport)]">Footer</include>
		</control>
		
		<!--Time-->
		<control type="group">
			<animation effect="slide" end="-20" time="0" condition="Skin.HasSetting(HideWidgetPanelBackground) + Skin.String(GadgetRows, enhanced)">Conditional</animation>
			<include>TimeInfo</include>
		</control>
	
		<!-- Home Screen -->
		<control type="group">
			<include>animation_window_open_close</include>
			<include condition="Skin.HasSetting(WeatherOnHome)">WeatherInfo</include>
			<include>ProfileInfo</include>
					
			<!-- Kodi Logo image -->
			<control type="image">
				<posx>35</posx>
				<posy>10</posy>
				<height>110</height>
				<aspectratio align="left">keep</aspectratio>
				<colordiffuse>$INFO[Skin.String(HeaderTextColor)]</colordiffuse>
				<texture>home/kodi_logo_light.png</texture>
				<visible>!Window.IsActive(DialogKaiToast.xml) + !Window.IsActive(DialogExtendedProgressBar.xml) + !Skin.HasSetting(WeatherOnHome) + !Skin.HasSetting(ShowProfile) + ![ControlGroup(77777).HasFocus | StringCompare(Window(Home).Property(ShowWidget),show)] + !Control.IsVisible(88888)</visible>
				<visible>!Skin.String(GadgetRows, simplever)</visible>
				<visible>!Skin.HasSetting(ShowProfile) + !Skin.HasSetting(WeatherOnHome)</visible>
				<visible>!Skin.String(CustomLogoImage)</visible>
			</control>
			<!-- custom Logo image -->
			<control type="image">
				<posx>35</posx>
				<posy>10</posy>
				<height>110</height>
				<aspectratio align="left">keep</aspectratio>
				<colordiffuse></colordiffuse>
				<texture>$INFO[Skin.String(CustomLogoImage)]</texture>
				<visible>!Window.IsActive(DialogKaiToast.xml) + !Window.IsActive(DialogExtendedProgressBar.xml) + !Skin.HasSetting(WeatherOnHome) + !Skin.HasSetting(ShowProfile) + ![ControlGroup(77777).HasFocus | StringCompare(Window(Home).Property(ShowWidget),show)] + !Control.IsVisible(88888)</visible>
				<visible>!Skin.String(GadgetRows, simplever)</visible>
				<visible>!Skin.HasSetting(ShowProfile) + !Skin.HasSetting(WeatherOnHome)</visible>
				<visible>Skin.String(CustomLogoImage)</visible>
			</control>
			
			<!--Home tiles List 300-->
			<include condition="[!Skin.HasSetting(UseFixedHomeFocus) + Skin.String(GadgetRows, 1)] | Skin.String(GadgetRows, 2) | Skin.String(GadgetRows, 3)">HomeLayoutNormal</include>
			<include condition="Skin.HasSetting(UseFixedHomeFocus) + Skin.String(GadgetRows, 1)">HomeLayoutFixedFocus</include>
			
			<include condition="Skin.String(GadgetRows, enhanced)">EnhancedHomeScreen</include>
			<include condition="Skin.String(GadgetRows, simplehor)">simplehome_horizontal</include>
			<include condition="Skin.String(GadgetRows, simplever)">simplehome_vertical</include>
			<include condition="Skin.String(GadgetRows, netflix)">HomeLayoutNetflix</include>
		
		
			<control type="scrollbar" id="60">
				<posx>1835</posx>
				<posy>390</posy>
				<height>570</height>
				<onleft>50</onleft>
				<onright>noop</onright>
				<visible>false</visible>
			</control>
			
	
			<!-- submenu -->
			<include condition="!Skin.HasSetting(DisableAllSubmenus) + Skin.String(SubmenuLayout, vertical) + [Skin.String(GadgetRows, 1) | Skin.String(GadgetRows, 2) | Skin.String(GadgetRows, 3)]">HomeMenuSubMenuVertical</include>
			<include condition="!Skin.HasSetting(DisableAllSubmenus) + Skin.String(SubmenuLayout, horizontal) + [Skin.String(GadgetRows, 1) | Skin.String(GadgetRows, 2) | Skin.String(GadgetRows, 3)]">HomeMenuSubMenuHorizontal</include>
			<include condition="!Skin.HasSetting(DisableAllSubmenus) + Skin.String(SubmenuLayout, tiles) + [Skin.String(GadgetRows, 1) | Skin.String(GadgetRows, 2) | Skin.String(GadgetRows, 3)]">HomeMenuSubMenuSmallTiles</include>

			<!-- subpages submenu -->
			<include condition="!Skin.HasSetting(DisableAllSubmenus) + Skin.String(SubmenuLayout, subpage) + [Skin.String(GadgetRows, 1) | Skin.String(GadgetRows, 2) | Skin.String(GadgetRows, 3)]">HomeMenuSubMenuPage</include>


		</control>
		
		
		
		
	</controls>
</window>
