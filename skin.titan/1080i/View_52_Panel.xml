<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="View_52_Panel">
	
		<!-- movie details -->
		<control type="group">
			<visible>Control.IsVisible(52) + Skin.HasSetting(PanelViewShowInfo)</visible>
			<include>MovieDetails</include>
		</control>
	
	
		<!-- panel no info -->
        <control type="group">
            <visible>Control.IsVisible(52)</visible>
            <include>animation_view_change</include>
            <include>animation_list</include>
			
			<control type="fixedlist" id="52">
                <posx>65</posx>
                <posy>660</posy>
                <width>1800</width>
                <height>255</height>
                <onup>9000</onup>
                <ondown>9000</ondown>
                <onleft>52</onleft>
                <onright>52</onright>
                <pagecontrol>60</pagecontrol>
                <viewtype label="Panel">wide</viewtype>
                <scrolltime tween="Cubic" easing="inout">500</scrolltime>
                <focusposition>8</focusposition>
                <orientation>horizontal</orientation>
                <preloaditems>2</preloaditems>
				<visible>container.content(MusicVideos) | Container.Content(tvshows) | Container.Content(Movies) | container.content(seasons)</visible>
                <!-- itemlayout movies -->
                <itemlayout height="245" width="182">
                    <control type="group">
						<posx>7</posx>
						<posy>7</posy>
						<control type="image">
							<include>SmallPanelPosterDimensions</include>
							<include>PosterThumbBG</include>
						  </control>
						  <control type="image">
							<include>SmallPanelPosterDimensions</include>
							<include>PosterThumb</include>
						  </control>
						  <include>SmallPosterViewWatchedImage</include>
					  </control>
                </itemlayout>
                <!-- focussed layout movies -->
                <focusedlayout height="245" width="182">
                    <control type="group">
						<posx>7</posx>
						<posy>7</posy>
						<!--Poster-->
						<animation type="focus">
							<effect type="zoom" start="100" end="150" center="auto" time="150" />
						</animation>
						<animation type="unfocus">
							<effect type="zoom" start="150" end="100" center="auto" time="150" />
						</animation>
					
						<control type="image">
						<include>SmallPanelPosterDimensions</include>
						<include>PosterThumbFO</include>
					  </control>
					  <control type="image">
						<include>SmallPanelPosterDimensions</include>
						<include>PosterThumb</include>
					  </control>
					  <include>SmallPosterViewWatchedImage</include>
				  </control>
                </focusedlayout>

			</control>
		</control>
		
        <control type="group">
            <visible>Control.IsVisible(52)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <include condition="!skin.hassetting(nofooterbar)">Footer</include>
        </control>
    </include>
</includes>