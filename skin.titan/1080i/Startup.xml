<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol always="true">10</defaultcontrol>
    <allowoverlay>no</allowoverlay>
     <include>defaultskinsettings</include>
	<controls>
        <control type="button" id="10">
			<description>trigger</description>
            <onfocus>AlarmClock(GoHome,ReplaceWindow($INFO[System.StartupWindow]),00:01,silent,false)</onfocus>
            <onfocus condition="!IsEmpty(Skin.String(AutoStartPlayList))">PlayMedia($INFO[Skin.String(AutoStartPlayList)])</onfocus>
			<texturenofocus>-</texturenofocus>
			<texturefocus>-</texturefocus>
		</control>
        <control type="image">
            <include>DimensionsFullscreen</include>
            <texture>special://skin/extras/backgrounds/splashscreen.jpg</texture>
        </control>
    </controls>
</window>