<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window id="104">
    <defaultcontrol always="true">-</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <controls>
	
    <control type="group">
	
            <include>animation_window_open_close</include>
			

			<control type="image">
                <posx>770</posx>
                <posy>350</posy>
            	<width>200</width>
				<height>200</height>
                <texture>dialogs/volume/volume-back.png</texture>
            	<aspectratio>stretch</aspectratio>
            </control>
			
            <control type="image">
                <posx>770</posx>
                <posy>350</posy>
            	<width>200</width>
				<height>200</height>   
                <texture>$INFO[Control.GetLabel(1),dialogs/volume/progress/p,.png]</texture>
           		<aspectratio>stretch</aspectratio>
            </control>
			
			
			<control type="image">
                <posx>770</posx>
                <posy>350</posy>
            	<width>200</width>
				<height>200</height>
                <texture>dialogs/volume/overlay.png</texture>
            	<aspectratio>stretch</aspectratio>
            </control>
			
			
			<control type="label">
                    <posx>830</posx>
                    <posy>550</posy>
                    <height>24</height>
                    <aligny>center</aligny>
					<font>Bold34</font>
                    <label>$INFO[Control.GetLabel(1),, %]</label>
                    <textcolor>FFFFFFFF</textcolor>
                </control>
			
            <control type="progress" id="1">
                <info>Player.Volume</info>
                <animation effect="fade" end="0" condition="true">Conditional</animation>
            </control>
			
    </control>
	
    </controls>
</window>