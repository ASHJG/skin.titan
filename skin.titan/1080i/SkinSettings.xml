<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol always="true">100</defaultcontrol>
	
	<onunload>SetProperty(powermenu, notactive, Home)</onunload>
    <allowoverlay>yes</allowoverlay>
    <include>defaultskinsettings</include>
    <controls>
