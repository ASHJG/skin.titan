        <control type="group">
            <visible>!Skin.HasSetting(DisableHeader)</visible>
            <include>TimeInfo</include>
        </control>
        <control type="group">
            <visible>!Skin.HasSetting(DisableHeader) + !Skin.HasSetting(AlwaysShowWeather)</visible>
