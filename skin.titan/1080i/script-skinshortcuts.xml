<?xml version="1.0" encoding="UTF-8"?>

<window>

	<allowoverlay>no</allowoverlay>
	
	<defaultcontrol always="true">300</defaultcontrol>
	<onunload condition="!Skin.String(GadgetRows, netflix) + !Skin.String(OSDPanelOpacity)">RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=300&amp;group=mainmenu|powermenu)</onunload>
	<onunload condition="Skin.String(GadgetRows, netflix) + !Skin.String(OSDPanelOpacity)">RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=9000&amp;group=mainmenu|powermenu)</onunload>
	<controls>
	
