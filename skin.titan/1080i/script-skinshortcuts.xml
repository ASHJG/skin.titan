						<scroll>false</scroll>
						<height>40</height>
					</control>
					
					<!--widget1 text-->
					<control type="label">
						<label fallback="231">$INFO[Container(211).Listitem.Property(widgetName)]</label>
						<font>Reg26</font>
						<scroll>true</scroll>
						<height>55</height>
					</control>
					
					<!--widget2 label-->
					<control type="label">
						<label>[B]$LOCALIZE[31499] 2:[/B]</label>
						<font>Reg26</font>
						<scroll>false</scroll>
						<height>40</height>
					</control>
					
					<!--widget2 text-->
					<control type="label">
						<label fallback="231">$INFO[Container(211).Listitem.Property(widgetName.1)]</label>
						<font>Reg26</font>
						<scroll>true</scroll>
						<height>40</height>
					</control>
					
