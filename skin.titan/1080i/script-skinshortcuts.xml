					<control type="label">
						<label></label>
						<font>Reg26</font>
						<scroll>false</scroll>
						<height>30</height>
					</control>
					
					<!--action label-->
					<control type="label">
						<label>[B]$LOCALIZE[31501]:[/B]</label>
						<font>Reg26</font>
						<scroll>false</scroll>
						<height>40</height>
					</control>
					
