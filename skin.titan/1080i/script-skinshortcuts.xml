					<control type="label">
						<label></label>
						<font>Reg26</font>
						<scroll>false</scroll>
						<height>25</height>
					</control>
					
					<!--action label-->
					<control type="label">
						<label>[B]$LOCALIZE[19190]:[/B]</label>
						<font>Reg26</font>
						<scroll>false</scroll>
						<height>40</height>
					</control>
					
					<!--background-->
					<control type="label">
						<label fallback="231">$INFO[Container(211).Listitem.Property(backgroundName)]</label>
						<font>Reg26</font>
						<scroll>true</scroll>
						<height>40</height>
						<width>500</width>
					</control>
				
				</control>
				
				<!--fake list -->
				<control type="list" id="111"> 
					<visible>false</visible>
					<orientation>vertical</orientation>
					<selectedcolor>FF00b8ff</selectedcolor>
					<itemlayout width="1000" height="65">
					</itemlayout>
					<focusedlayout width="1000" height="65">			
					</focusedlayout>
				</control>
				
				<control type="group">
					
					<control type="scrollbar" id="260"> <!--scrollbar-->
						<left>700</left>
						<top>20</top>
						<height>700</height>
						<onleft>211</onleft>
						<onright>211</onright>
						<showonepage>false</showonepage>
						<animation effect="slide" end="-15" time="0" condition="skin.hastheme(classic)">Conditional</animation>
						<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)">Conditional</animation>
						<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)]">Conditional</animation>
					</control>				
				</control>
				
			</control>


			
			<control type="grouplist" id="300">
				<left>745</left>
				<top>20</top>
				<width>500</width>
				<height>770</height>
				<itemgap>5</itemgap>
				<orientation>vertical</orientation>
				<onleft>211</onleft>
				<scrolltime>0</scrolltime>

				<control type="button" id="301"> <!--new shortcut-->
					<width>500</width>
					<align>center</align>
					<label>$ADDON[script.skinshortcuts 32000]</label>
					<onfocus>ClearProperty(customWidget, Home)</onfocus>
					<visible>false</visible>
				</control>
				
				<control type="button" id="1301"> <!--new shortcut workaround-->
					<width>500</width>
					<align>center</align>
					<onclick>XBMC.RunScript(script.skin.helper.service,action=ADDSHORTCUT)</onclick>
