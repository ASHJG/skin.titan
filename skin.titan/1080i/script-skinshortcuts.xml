                    <visible>!Skin.String(GadgetRows, netflix)</visible>
				</control>
											
				<control type="button" id="1407"> <!--set widget 2-->
					<width>500</width>
					<align>center</align>
					<onclick>SetProperty(widgetID, 1)</onclick>
					<onclick>SendClick(312)</onclick>
					<label>$ADDON[script.skinshortcuts 32044] 2</label>
