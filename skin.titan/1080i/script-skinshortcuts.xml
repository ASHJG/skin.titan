					<top>30</top>
					<width>600</width>
					<height>750</height>
					<onright>300</onright>
					<orientation>vertical</orientation>
					<viewtype label="535">list</viewtype>
					<preloaditems>2</preloaditems>
					<pagecontrol>260</pagecontrol>
					<scrolltime>0</scrolltime>
					<selectedcolor>FF00b8ff</selectedcolor>
					<itemlayout width="600" height="65">
						<control type="label"> <!--label-->
							<left>20</left>
							<width>460</width>
							<label>$INFO[ListItem.Label]</label>
							<font>Reg26</font>
							<scroll>false</scroll>
							<textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
							<selectedcolor>FF00b8ff</selectedcolor>
						</control>
					</itemlayout>				
					<focusedlayout width="600" height="65">
						
						<control type="image"> <!--focus bg-->
							<left>0</left>
							<top>0</top>
							<width>850</width>
							<height>60</height>
							<texture diffuse="diffuse/panel.png" border="5" colordiffuse="$INFO[Skin.String(ButtonFocusColor)]">colors/color_white.png</texture>
							<animation effect="fade" start="100" end="35" time="100" condition="!Control.HasFocus(211)">Conditional</animation>
						</control>

						<control type="label"> <!--label-->
							<left>20</left>
							<width>460</width>
							<label>$INFO[ListItem.Label]</label>
							<textcolor>black</textcolor>
							<font>Reg26</font>
							<scroll>false</scroll>
						</control>
						
						<control type="label"> <!--label-->
							<left>20</left>
							<width>460</width>
							<label>$INFO[ListItem.Label]</label>
							<textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
							<font>Reg26</font>
							<scroll>false</scroll>
							<visible>!Control.HasFocus(211)</visible>
						</control>
						
						<control type="button">
							<left>150</left>
							<top>0</top>
							<width>1</width>
							<height>60</height>
							<font>Reg28</font>
							<textcolor>blue</textcolor>
							<align>center</align>
							<aligny>center</aligny>
							<label>-</label>
							<visible>false</visible>
							<onfocus condition="!Skin.HasSetting(DisableAllSubmenus)">SetProperty(menu,211,Home)</onfocus>
							<onfocus condition="Skin.HasSetting(UseSectionBackground)">SetProperty(SectionBackground,$INFO[Container(211).ListItem.Property(defaultID)],Home)</onfocus>
							<onfocus condition="Skin.HasSetting(UseSectionBackground) + !IsEmpty(Container(211).ListItem.Property(Background))">SetProperty(SectionBackgroundValue,$INFO[Container(211).ListItem.Property(Background)],Home)</onfocus>
							<onfocus condition="Skin.HasSetting(UseSectionBackground) + IsEmpty(Container(211).ListItem.Property(Background))">ClearProperty(SectionBackgroundValue,Home)</onfocus>	
						</control>
					</focusedlayout>
					
				</control>
				
				<!-- right panel -->
				<control type="image">
