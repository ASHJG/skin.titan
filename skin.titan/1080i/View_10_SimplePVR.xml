<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
    <include name="View_10_SimplePVR">
         <control type="group">
            <visible>Control.IsVisible(10)</visible>
            
            <control type="group">
                <!--Panel-->

				<!-- Background Panel TOP-->
				<control type="image">
					<posx>50</posx>
					<posy>170</posy>
					<width>1820</width>
					<height>240</height>
					<texture border="15">diffuse/bgpanel.png</texture>
					<colordiffuse>$INFO[Skin.String(ViewDetailsPanelColor)]</colordiffuse>
                    <visible>!Skin.HasSetting(View10_Hidepanel)</visible>
				</control>
				<!-- Background Panel default theme BOTTOM-->
				<control type="image">
					<posx>50</posx>
					<posy>450</posy>
					<width>1820</width>
					<height>510</height>
					<texture border="15">diffuse/bgpanel.png</texture>
					<colordiffuse>$INFO[Skin.String(ViewDetailsPanelColor)]</colordiffuse>
                     <visible>!Skin.HasSetting(View10_Hidepanel)</visible>
				</control>
				<!-- Background Panel default theme TITLEBAR-->
				<control type="image">
					<posx>50</posx>
					<posy>450</posy>
					<width>1820</width>
					<height>60</height>
					<texture border="15">diffuse/bgpanel.png</texture>
					<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
				</control>
                <control type="image">
					<posx>50</posx>
					<posy>450</posy>
					<width>1820</width>
					<height>60</height>
					<texture border="15">diffuse/bgpanel.png</texture>
					<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
				</control>
	
            </control>
            <control type="group">
                <!--Video Window-->
                
                <visible>!IsEmpty(ListItem.Date)</visible>
                
                
                <posx>80</posx>
                <posy>190</posy>
                <control type="image">
                    <!--Background-->
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>350</width>
                    <height>200</height>
                    <texture>$VAR[PVRThumb]</texture>
                    <aspectratio align="left">keep</aspectratio>
                    <visible>![VideoPlayer.Content(livetv) + Skin.HasSetting(PVRShowPreview)]</visible>
                </control>
				<!--Video Window -->
                <control type="videowindow">
                   <posx>0</posx>
                    <posy>0</posy>
                    <width>350</width>
                    <height>200</height>
                    <visible>VideoPlayer.Content(livetv) + Skin.HasSetting(PVRShowPreview)</visible>
                </control>
            </control>
            <control type="label">
                <!--Title-->
                <visible>!IsEmpty(ListItem.Date)</visible>
                <posx>500</posx>
                <posy>190</posy>
                <width>600</width>
                <height>50</height>
                <font>Bold38</font>
                <textcolor>$INFO[Skin.String(ViewDetailsHighlightTextColor)]</textcolor>
                <shadowcolor>$INFO[Skin.String(ViewDetailsHighlightTextShadowColor)]</shadowcolor>
                <label>$INFO[ListItem.Label]</label>
            </control>
            <control type="label">
                <!--No Info-->
                <visible>IsEmpty(ListItem.Date)</visible>
                <posx>0</posx>
                <posy>270</posy>
                <width>100%</width>
                <height>50</height>
                <align>center</align>
                <font>Bold38</font>
                <shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
                <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                <label>195</label>
            </control>
            <control type="grouplist">
                <!--Start, End, Duration-->
                
                <visible>!IsEmpty(ListItem.Date)</visible>
                <posx>500</posx>
                <posy>245</posy>
                <control type="group">
                    <!-- Ground 1 -->
                    <height>40</height>
                    <control type="label">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>180</width>
                        <shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
						<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                        <label>$LOCALIZE[142]</label>
                    </control>
                    <control type="label">
                        <posx>160</posx>
                        <posy>0</posy>
                        <width>300</width>
                        <shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
                        <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                        <label>$INFO[ListItem.StartTime] - $INFO[ListItem.EndTime]</label>
                    </control>
                </control>
                <control type="group">
                    <!-- Ground 2 -->
                    <height>40</height>
                    <visible>!IsEmpty(ListItem.Duration)</visible>
                    <control type="label">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>180</width>
                        <shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
                        <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                        <label>$LOCALIZE[180]:</label>
                    </control>
                    <control type="label">
                        <posx>160</posx>
                        <posy>0</posy>
                        <width>300</width>
                        <shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
                        <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                        <label>$VAR[ListItemDuration]</label>
                    </control>
                </control>
                <control type="group">
                    <!-- Ground 3 -->
                    <height>40</height>
                    <control type="label">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>180</width>
                        <shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
                        <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                        <label>$LOCALIZE[19148]:</label>
                    </control>
                    <control type="label">
                        <posx>160</posx>
                        <posy>0</posy>
                        <width>300</width>
                        <shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
                        <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                        <label>$INFO[ListItem.ChannelName]</label>
                    </control>
                </control>
            </control>
            <control type="textbox">
                <!--Info Plot-->
                
                <visible>!IsEmpty(ListItem.Date)</visible>
                
                
                <posx>1150</posx>
                <posy>190</posy>
                <width>650</width>
                <height>190</height>
                <shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
                <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                <label fallback="161">$INFO[ListItem.Plot]</label>
            </control>
            <control type="group">
                <!--Top Bar-->
                
                
                
                <posx>125</posx>
                <posy>435</posy>
               
                <control type="label">
                    <!--Channel Name-->
                    <posx>100</posx>
                    <posy>30</posy>
                    <width>300</width>
                    <height>30</height>
                    <font>Reg30</font>
                    <textoffsetx>0</textoffsetx>
                    <textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
                    <label>19148</label>
                </control>
                 <control type="label">
                    <!--Time-->
                    <posx>350</posx>
                    <posy>30</posy>
                    <width>100</width>
                    <height>30</height>
                    <font>Reg30</font>
                    <textoffsetx>0</textoffsetx>
                    <textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
                    <label>555</label>
                </control>
                <control type="label">
                    <!--Channle Title-->
                    <posx>850</posx>
                    <posy>30</posy>
                    <width>300</width>
                    <height>30</height>
                    <font>Reg30</font>
                    <textoffsetx>0</textoffsetx>
                    <textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
                    <label>369</label>
                </control>

            </control>
            <control type="list" id="10">
                <!--List ID=14-->
				<viewtype label="31567">list</viewtype>
                <visible>StringCompare(Window(Home).Property(SkinHelper.ForcedView),10) | IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
                <visible>SubString(Window.Property(xmlfile),MyPVR,left)</visible>
                <posx>125</posx>
                <posy>540</posy>
                <width>1650</width>
                <height>400</height>
                <onup>15</onup>
                <ondown>15</ondown>
                <onleft>9000</onleft>
                <onright>noop</onright>
                <pagecontrol>-</pagecontrol>
                <scrolltime>200</scrolltime>
                <itemlayout height="80"  width="1650">
                
                    <control type="label">
                        <!--Channel Number-->
                        <posx>20</posx>
                        <posy>0</posy>
                        <width>70</width>
                        <height>80</height>
                        <font>Reg28</font>
                        <textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
                        <label>$INFO[ListItem.ChannelNumberLabel]</label>
                    </control>
                    
                    <control type="image">
                        <posx>100</posx>
                        <posy>5</posy>
                        <width>60</width>
                        <height>60</height>
                        <texture>common/folder.png</texture>
                        <colordiffuse>$INFO[Skin.String(ViewDetailsListItemTextColor)]</colordiffuse>
                        <visible>ListItem.IsFolder</visible>
                    </control>
                    
                    <control type="label">
                        <!--Channel Name-->
                        <description>Channel Value</description>
                        <posx>100</posx>
                        <posy>0</posy>
                        <width>300</width>
                        <height>80</height>
                        <font>Reg28</font>
                        <textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
                        <label>$INFO[ListItem.ChannelName]</label>
                        <visible>!ListItem.IsFolder</visible>
                    </control>
                    
                    <control type="label">
                        <!--Date-->
                        <posx>350</posx>
                        <posy>0</posy>
                        <width>500</width>
                        <height>80</height>
                        <font>Reg28</font>
                        <textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
                        <label>$INFO[ListItem.StartDate] $INFO[ListItem.StartTime]</label>
                    </control>
                    <control type="label">
                        <!--Channel Show-->
                        <posx>850</posx>
                        <posy>0</posy>
                        <width>500</width>
                        <height>80</height>
                        <font>Reg28</font>
                        <textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
                        <label>$VAR[ListTitle]</label>
                    </control>
                    <control type="image">
                        <!--Separator-->
                        <posx>0</posx>
                        <posy>80</posy>
                        <width>1650</width>
                        <height>20</height>
                        <fadetime>400</fadetime>
                        <colordiffuse>list_separator</colordiffuse>
                        <texture>common/separator.png</texture>
                    </control>
                    <control type="group">
                        <!--Watched Overlay-->
						<right>0</right>
                        <top>0</top>
                        <include>WatchedIndicatorNormal</include>
                    </control>
                </itemlayout>
                <focusedlayout height="80" width="1650">
                    <control type="image">
                        <!--Slide-->
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1650</width>
                        <height>80</height>
                        <texture diffuse="diffuse/panel.png" border="5" colordiffuse="$INFO[Skin.String(ViewDetailsFocusColor)]">diffuse/panel.png</texture>
                    </control>
                    
                    <control type="label">
                        <!--Channel Number-->
                        <posx>20</posx>
                        <posy>0</posy>
                        <width>70</width>
                        <height>80</height>
                        <font>Reg28</font>
                        <textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
                        <label>$INFO[ListItem.ChannelNumberLabel]</label>
                    </control>
                    <control type="image">
                        <posx>100</posx>
                        <posy>5</posy>
                        <width>60</width>
                        <height>60</height>
                        <texture>common/folder.png</texture>
                        <colordiffuse>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</colordiffuse>
                        <visible>ListItem.IsFolder</visible>
                    </control>

                    <control type="label">
                        <!--Channel Name-->
                        <posx>100</posx>
                        <posy>0</posy>
                        <width>300</width>
                        <height>80</height>
                        <font>Reg28</font>
                        <textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
                        <label>$INFO[ListItem.ChannelName]</label>
                        <visible>!ListItem.IsFolder</visible>
                    </control>
                     <control type="label">
                        <!--Date-->
                        <posx>350</posx>
                        <posy>0</posy>
                        <width>500</width>
                        <height>80</height>
                        <font>Reg28</font>
                        <textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
                        <scroll>true</scroll>
                        <label>$INFO[ListItem.StartDate] $INFO[ListItem.StartTime]</label>
                    </control>
                    <control type="label">
                        <!--Channel Show-->
                        <posx>850</posx>
                        <posy>0</posy>
                        <width>500</width>
                        <height>80</height>
                        <font>Reg28</font>
                        <textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
                        <label>$VAR[ListTitle]</label>
                    </control>
                    <control type="image">
                        <!--Separator-->
                        <posx>0</posx>
                        <posy>80</posy>
                        <width>1650</width>
                        <height>20</height>
                        <fadetime>400</fadetime>
                        <colordiffuse>list_separator</colordiffuse>
                        <texture>common/separator.png</texture>
                    </control>
                    <control type="group">
                        <!--Watched Overlay-->
						<right>0</right>
                        <top>0</top>
                        <include>WatchedIndicatorNormal</include>
                    </control>
                </focusedlayout>

            </control>
        </control>
         
    </include>
</includes>
