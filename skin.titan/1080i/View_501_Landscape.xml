<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
    <!--Default-->
    <include name="View_501_Landscape">
		<control type="group">
			<defaultcontrol always="true">501</defaultcontrol>
		    <visible>Control.IsVisible(501)</visible>
			<include>animation_view_change</include>

			<control type="panel" id="501">
				<posx>60</posx>
				<width>1880</width>
				<bottom>150</bottom>
                <height>700</height>
				<onup>9000</onup>
				<ondown>60</ondown>
				<onleft>501</onleft>
				<onright>501</onright>
				<pagecontrol>60</pagecontrol>
				<viewtype label="31430">thumbnail</viewtype>
				<orientation>horizontal</orientation>
				<preloaditems>4</preloaditems>
				<scrolltime tween="cubic" easing="inout">500</scrolltime>
				<visible>StringCompare(Window(Home).Property(SkinHelper.ForcedView),501) | IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
				<itemlayout width="620" height="350" condition="![Skin.HasSetting(LandscapeAltAspectRatioAdvLauncher) + substring(Container.FolderPath,advanced.launcher)]">
                    <control type="group">
                        <width>565</width>
                        <height>325</height>
                        <include>LandscapeLayout</include>
                    </control>
				</itemlayout>
				<focusedlayout width="620" height="350" condition="![Skin.HasSetting(LandscapeAltAspectRatioAdvLauncher) + substring(Container.FolderPath,advanced.launcher)]">
					<control type="group">
                        <width>565</width>
                        <height>325</height>
						<include>LandscapeLayoutFocus</include>
					</control>
				</focusedlayout>
                <itemlayout width="620" height="350" condition="[Skin.HasSetting(LandscapeAltAspectRatioAdvLauncher) + substring(Container.FolderPath,advanced.launcher)]">
                    <control type="group">
                        <width>493</width>
                        <left>30</left>
                        <height>340</height>
                        <include>LandscapeLayout</include>
                    </control>
				</itemlayout>
				<focusedlayout width="620" height="350" condition="[Skin.HasSetting(LandscapeAltAspectRatioAdvLauncher) + substring(Container.FolderPath,advanced.launcher)]">
					<control type="group">
                        <width>493</width>
                        <height>340</height>
                        <left>30</left>
						<include>LandscapeLayoutFocus</include>
					</control>
				</focusedlayout>
			</control>

			<!--horizontal Scrollbar-->
			<control type="group">
				<control type="scrollbar" id="60">
					<visible>Control.IsVisible(501)</visible>
					<left>60</left>
					 <bottom>140</bottom>
					<width>1800</width>
					<height>15</height>
					<onup>501</onup>
					<onleft>60</onleft>
					<onright>60</onright>
					<orientation>horizontal</orientation>
					<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)">Conditional</animation>
					<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)]">Conditional</animation>
				</control>
			</control>
			
		</control>
	
	</include>
</includes>