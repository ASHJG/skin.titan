<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>1</defaultcontrol>
    <visible>Window.IsActive(fullscreenvideo) + !Window.IsActive(script.pseudotv.TVOverlay.xml) + !Window.IsActive(script.pseudotv.live.TVOverlay.xml)</visible>
	<visible>Player.Seeking | Player.DisplayAfterSeek  | Player.Paused | Player.Forwarding | Player.Rewinding</visible>
	<visible>Window.IsActive(MusicVisualisation.xml) | Window.IsActive(VideoFullScreen.xml)</visible>
    <onload>Dialog.Close(fullscreeninfo)</onload>
	<controls>

		<!--OSD Panel-->
        <control type="group">
            <visible>!Control.HasFocus(3012) + !Control.HasFocus(4012) + !Window.IsActive(filebrowser) + !Window.IsActive(VideoOSDBookmarks.xml) + !Window.IsActive(DialogPVRChannelsOSD.xml) + !Window.IsActive(DialogPVRGuideOSD.xml) + !Window.IsActive(virtualkeyboard) + !Window.IsActive(sliderdialog)</visible>
			<visible>Skin.HasSetting(OSDShowInfoOnPause) | [!Skin.HasSetting(OSDShowInfoOnPause) + [[Pvr.IsPlayingTv | Pvr.IsPlayingRadio] + Player.DisplayAfterSeek  + IsEmpty(Player.SeekOffset)]]</visible>
			<visible>!Window.IsActive(VideoOSD.xml) + !Window.IsActive(MusicOSD.xml)</visible>
            <animation effect="slide" start="0,400" end="0,0" tween="cubic" easing="out" delay="300" time="250" reversible="false" condition="!Window.IsActive(VideoOSD.xml) + !Window.Isactive(DialogFullScreenInfo.xml)">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="0,400" tween="cubic" easing="out" delay="2000" time="250" reversible="false" condition="!Window.IsActive(VideoOSD.xml) + !Window.Isactive(DialogFullScreenInfo.xml) + [Window.IsActive(MusicVisualisation.xml) | Window.IsActive(VideoFullScreen.xml)]">WindowClose</animation>
            <include condition="!Skin.HasTheme(classic) + !Skin.HasSetting(UseSlimOSDPanel)">OSDPanelModern</include>
			<include condition="!Skin.HasTheme(classic) + Skin.HasSetting(UseSlimOSDPanel)">OSDPanelModernSlim</include>
			<include condition="Skin.HasTheme(classic)">OSDPanelClassic</include>
            <!--Weather on Video Info and OSD-->
            <include condition="Skin.HasSetting(ShowWeatherVideoInfoOSD) + !Skin.HasSetting(UseSlimOSDPanel) + !Skin.HasTheme(classic)">WeatherInfoOSD</include>
			<include condition="Skin.HasSetting(ShowWeatherVideoInfoOSD) + Skin.HasSetting(UseSlimOSDPanel) + !Skin.HasTheme(classic)">WeatherInfoOSDSlim</include>
        </control>
         <!--Info Panel-->
        <control type="group">
			<visible>Skin.HasSetting(OSDShowInfoOnPause) + !Control.HasFocus(3012) + !Control.HasFocus(4012) + !Window.IsActive(filebrowser) + !Window.IsActive(VideoOSDBookmarks.xml) + !Window.IsActive(DialogPVRChannelsOSD.xml) + !Window.IsActive(DialogPVRGuideOSD.xml) + !Window.IsActive(virtualkeyboard) + !Window.IsActive(sliderdialog)</visible>
			<animation effect="slide" start="0,-400" end="0,0" tween="cubic" easing="out" delay="300" time="250" reversible="false" condition="!Window.IsActive(VideoOSD.xml) + !Window.Isactive(DialogSeekBar.xml) + !Skin.HasSetting(LowPerformanceMode)">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="0,-400" tween="cubic" easing="out" delay="300" time="250" reversible="false" condition="!Window.IsActive(VideoOSD.xml) + !Window.Isactive(DialogSeekBar.xml) + !Skin.HasSetting(LowPerformanceMode)">WindowClose</animation>
            <include>OSDInfoPanel</include>
        </control>
		
		<!-- large forward and rewind labels -->
		<control type="label">
			<posx>0</posx>
			<posy>0</posy>
			<height>100%</height>
			<width>100%</width>
			<align>center</align>
			<aligny>center</aligny>
			<font>Bold120</font>
			<textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
			<label>$VAR[PlayerActionLabelLarge]</label>
			<animation effect="fade" start="0" end="100" tween="cubic" easing="out" delay="300" time="250" reversible="false">WindowOpen</animation>
			<animation effect="slide" start="100" end="0" tween="cubic" easing="out" delay="2000" time="250" reversible="false">WindowClose</animation>
			
			<visible>Skin.HasSetting(OSDLargeSeekingLabel) + !Window.IsActive(DialogSubtitles.xml)</visible>
		</control>
		
		<!-- small panel if OSD disabled on seek -->
        <include condition="!Skin.HasSetting(OSDShowInfoOnPause)">Small_OSD_Seek_Panel</include>
	</controls>
</window>
