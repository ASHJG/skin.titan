<?xml version="1.0" encoding="UTF-8"?>
<includes>
  
  
  <include name="View_509_PanelSquare">
    <control type="group">
      <visible>Control.IsVisible(509)</visible>
      <include>animation_view_change</include>
      <control type="panel" id="509">
        <viewtype label="31436">icons</viewtype>
        <posx>45</posx>
        <bottom>135</bottom>
        <width>1836</width>
        <height>780</height>
        <orientation>vertical</orientation>
        <onleft>9000</onleft>
        <onright>60</onright>
        <onup>509</onup>
        <ondown>509</ondown>
        <preloaditems>4</preloaditems>
        <pagecontrol>60</pagecontrol>
		<visible>StringCompare(Window(Home).Property(SkinHelper.ForcedView),509) | IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
        <itemlayout height="261" width="260">
          <control type="image">
            <include>BigPanelSquareDimensions</include>
            <include>SquareThumbBG</include>
          </control>
          <control type="image">
            <include>BigPanelSquareDimensions</include>
            <include>SquareThumb</include>
          </control>
		  <control type="image">
				<posx>18</posx>
				<posy>182</posy>
				<width>236</width>
				<height>60</height>
				<texture diffuse="home/home_matte2.png">colors/color_white.png</texture>
                <colordiffuse>$INFO[Skin.String(ViewDetailsPanelColor)]</colordiffuse>
				<visible>Skin.HasSetting(ShowLabelsSquare)</visible>
				<visible>!StringCompare(ListItem.Label,..)</visible>
			</control>
            <control type="image">
				<posx>18</posx>
				<posy>182</posy>
				<width>236</width>
				<height>60</height>
				<texture diffuse="home/home_matte2.png">colors/color_white.png</texture>
                <colordiffuse>$INFO[Skin.String(ViewDetailsPanelColor)]</colordiffuse>
				<visible>Skin.HasSetting(ShowLabelsSquare)</visible>
				<visible>!StringCompare(ListItem.Label,..)</visible>
			</control>
			<control type="label">
				<posx>25</posx>
				<posy>182</posy>
				<width>220</width>
				<height>60</height>
				<font>Reg22</font>
				<align>left</align>
				<info>ListItem.Label</info>
				<textcolor>$INFO[Skin.String(ViewDetailsListItemTextColor)]</textcolor>
				<visible>Skin.HasSetting(ShowLabelsSquare)</visible>
				<visible>!StringCompare(ListItem.Label,..)</visible>
			</control>
			<control type="group">
				<!--Watched Overlay-->
				<right>5</right>
				<top>5</top>
				<include>WatchedIndicatorNormal</include>
			</control>
        </itemlayout>
        <focusedlayout height="261" width="260">
		  <control type="image">
            <include>BigPanelSquareDimensions</include>
            <include>SquareThumbFO</include>
          </control>
          <control type="image">
            <include>BigPanelSquareDimensions</include>
            <include>SquareThumb</include>
          </control>
		  <control type="image">
				<posx>18</posx>
				<posy>182</posy>
				<width>236</width>
				<height>60</height>
				<texture diffuse="home/home_matte2.png">colors/color_white.png</texture>
				<colordiffuse>$INFO[Skin.String(ViewDetailsFocusColor)]</colordiffuse>
				<visible>Skin.HasSetting(ShowLabelsSquare)</visible>
				<visible>!StringCompare(ListItem.Label,..)</visible>
			</control>
			<control type="label">
				<posx>25</posx>
				<posy>182</posy>
				<width>220</width>
				<height>60</height>
				<font>Reg22</font>
				<align>left</align>
				<scroll>true</scroll>
				<info>ListItem.Label</info>
				<textcolor>$INFO[Skin.String(ViewDetailsListItemTextFocusColor)]</textcolor>
				<visible>Skin.HasSetting(ShowLabelsSquare)</visible>
				<visible>!StringCompare(ListItem.Label,..)</visible>
			</control>
		  <control type="group">
				<!--Watched Overlay-->
				<right>5</right>
				<top>5</top>
				<include>WatchedIndicatorNormal</include>
			</control>
			
        </focusedlayout>
      
	  
	  </control>
      
	  <!--vertical Scollbar-->
		<control type="scrollbar" id="60">
			<visible>Control.IsVisible(509)</visible>
			<right>15</right>
			<bottom>135</bottom>
			<height>770</height>
			<onup>60</onup>
			<ondown>60</ondown>
			<onleft>509</onleft>
			<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)">Conditional</animation>
			<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)]">Conditional</animation>
		</control>
	  
		
    </control>
	
	
  </include>
</includes>
