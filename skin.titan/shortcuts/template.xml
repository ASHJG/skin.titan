<?xml version="1.0" encoding="UTF-8"?>


<template>
	
	<other include="widget">
		<!-- Match our custom widgets with a widgetType of media, or a node with mediaType of movies or tvshows -->
		<condition tag="property" attribute="name|widgetTarget"></condition>
		<match>any</match>

		<!-- For nodes, set the content property to the value of widgetPath -->
		<property name="content" tag="property" attribute="name|widgetPath" />
		<property name="target" tag="property" attribute="name|widgetTarget" />

		<controls>
			<control type="panel" id="510">
				<skinshortcuts>visibility</skinshortcuts>
				<visible>StringCompare(Window(home).Property(activewidget),0) | IsEmpty(Window(home).Property(activewidget))</visible>
                <include condition="!Skin.String(GadgetRows, enhanced) + Skin.String(widgetstyle, poster) + Skin.String(GadgetRows, simplever)">widget_layout_vertical_poster</include>
                <include condition="!Skin.String(GadgetRows, enhanced) + Skin.String(widgetstyle, landscape) + Skin.String(GadgetRows, simplever)">widget_layout_vertical_landscape</include>
                <include condition="!Skin.String(GadgetRows, enhanced) + Skin.String(widgetstyle, poster) + !Skin.String(GadgetRows, simplever)">widget_layout_horizontal_poster</include>
                <include condition="!Skin.String(GadgetRows, enhanced) + Skin.String(widgetstyle, landscape) + !Skin.String(GadgetRows, simplever)">widget_layout_horizontal_landscape</include>
                <include condition="!Skin.String(GadgetRows, enhanced) + Skin.String(widgetstyle, single box)">widget_layout_single_box</include>
				<include condition="Skin.String(GadgetRows, enhanced)">panel_layout_enhanced</include>
				<content target="$SKINSHORTCUTS[target]">$SKINSHORTCUTS[content]</content>
			</control>
		</controls>
	</other>
	
	<other include="widget.1">
		<!-- Match our custom widgets with a widgetType of media, or a node with mediaType of movies or tvshows -->
		<condition tag="property" attribute="name|widgetTarget.1"></condition>
		<match>any</match>
		<!-- For nodes, set the content property to the value of widgetPath -->
		<property name="content" tag="property" attribute="name|widgetPath.1" />
		<property name="target" tag="property" attribute="name|widgetTarget.1" />

		<controls>
			<control type="panel" id="510">
				<skinshortcuts>visibility</skinshortcuts>
				<visible>!Skin.String(GadgetRows, enhanced)</visible>
				<visible>StringCompare(Window(home).Property(activewidget),1)</visible>
				<include condition="!Skin.String(GadgetRows, enhanced) + Skin.String(widgetstyle, poster) + Skin.String(GadgetRows, simplever)">widget_layout_vertical_poster</include>
                <include condition="!Skin.String(GadgetRows, enhanced) + Skin.String(widgetstyle, landscape) + Skin.String(GadgetRows, simplever)">widget_layout_vertical_landscape</include>
                <include condition="!Skin.String(GadgetRows, enhanced) + Skin.String(widgetstyle, poster) + !Skin.String(GadgetRows, simplever)">widget_layout_horizontal_poster</include>
                <include condition="!Skin.String(GadgetRows, enhanced) + Skin.String(widgetstyle, landscape) + !Skin.String(GadgetRows, simplever)">widget_layout_horizontal_landscape</include>
                <include condition="!Skin.String(GadgetRows, enhanced) + Skin.String(widgetstyle, single box)">widget_layout_single_box</include>
				<include condition="Skin.String(GadgetRows, enhanced)">panel_layout_enhanced</include>
				<content target="$SKINSHORTCUTS[target]">$SKINSHORTCUTS[content]</content>
			</control>
		</controls>
	</other>
	
	<other include="spotlightwidget">
		<!-- Match our custom widgets with a widgetType of media, or a node with mediaType of movies or tvshows -->
		<condition tag="property" attribute="name|widgetTarget.1"></condition>
		<match>any</match>

		<!-- For nodes, set the content property to the value of widgetPath -->
		<property name="content" tag="property" attribute="name|widgetPath.1" />
		<property name="target" tag="property" attribute="name|widgetTarget.1" />

		<controls>
			<control type="panel" id="1508">
				<skinshortcuts>visibility</skinshortcuts>
				<include>SpotLightWidgetLayout</include>
				<content target="$SKINSHORTCUTS[target]">$SKINSHORTCUTS[content]</content>
			</control>
		</controls>
	</other>


</template>
